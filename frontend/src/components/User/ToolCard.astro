---
interface Props {
  name: string;
  description: string;
  url: string;
  icon: string;
}

const { name, description, url, icon } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="tool-card">
  <div class="tool-icon">
    {icon && icon.startsWith('<svg') ? (
      <Fragment set:html={icon} />
    ) : icon && (icon.startsWith('http') || icon.startsWith('/')) ? (
      <img src={icon} alt={name} class="tool-icon-img" />
    ) : (
      <span class="emoji-icon">{icon || "ðŸ”§"}</span>
    )}
  </div>
  <div class="tool-content">
    <div class="tool-header">
      <h3 class="tool-name">{name}</h3>
    </div>
    <p class="tool-desc">{description}</p>
  </div>
</a>

<style>
  .tool-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 12px;
    padding: 1.2rem;
    text-decoration: none;
    transition: all 0.3s ease;
    height: 100%;
    box-sizing: border-box;
  }

  .tool-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.06);
    border-color: transparent;
  }

  .tool-icon {
    width: 48px;
    height: 48px;
    background: #f5f5f5;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .tool-content {
    flex: 1;
    min-width: 0; /* Prevent text overflow issues */
  }

  .tool-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.3rem;
  }

  .tool-name {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #111;
  }

  .tool-desc {
    margin: 0;
    font-size: 0.9rem;
    color: #666;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
