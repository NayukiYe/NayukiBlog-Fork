---
interface Props {
  title: string;
  cover: string;
  url?: string;
  tags?: string[];
}

const { title, cover, url, tags = [] } = Astro.props;
---

<div class="book-card">
  <div class="cover-wrapper">
    <img src={cover} alt={title} loading="lazy" />
  </div>
  <div class="book-info">
    <h3 class="book-title">{title}</h3>
    
    {tags.length > 0 && (
      <div class="book-tags">
        {tags.map(tag => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}

    {url ? (
      <a href={url} class="download-btn" target="_blank" rel="noopener noreferrer">
        <span class="icon">⬇️</span> Download
      </a>
    ) : (
      <button class="download-btn" disabled title="No download link available">
        <span class="icon">⬇️</span> Download
      </button>
    )}
  </div>
</div>

<style>
  .book-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
  }

  .book-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.08);
  }

  .cover-wrapper {
    width: 100%;
    aspect-ratio: 2/3;
    overflow: hidden;
    background: #f9f9f9;
    border-bottom: 1px solid #eaeaea;
    position: relative;
  }

  .cover-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .book-card:hover .cover-wrapper img {
    transform: scale(1.05);
  }

  .book-info {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .book-title {
    margin: 0 0 0.8rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: #111;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .book-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 1rem;
  }

  .tag {
    font-size: 0.7rem;
    color: #555;
    background: #f0f0f0;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
  }

  .download-btn {
    margin-top: auto;
    width: 100%;
    padding: 0.6rem;
    border: none;
    border-radius: 6px;
    background: #000;
    color: #fff;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: background 0.2s;
    text-decoration: none;
  }

  .download-btn:hover:not(:disabled) {
    background: #333;
  }

  .download-btn:disabled {
    background: #f5f5f5;
    color: #aaa;
    cursor: not-allowed;
  }

  .download-btn .icon {
    font-size: 1rem;
  }

  .download-btn:disabled .icon {
    opacity: 0.5;
    filter: grayscale(1);
  }
</style>
