<style>
  .profile-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .avatar-container {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    flex-shrink: 0;
  }

  .avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-info {
    flex: 1;
  }

  .profile-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.3rem 0;
    color: #111;
  }

  .profile-bio {
    font-size: 0.95rem;
    color: #666;
    margin: 0 0 0.8rem 0;
  }

  .profile-links {
    display: flex;
    gap: 0.8rem;
  }

  .profile-links a {
    color: #666;
    transition: color 0.2s;
  }

  .profile-links a:hover {
    color: #000;
  }

  @media (min-width: 640px) {
    .avatar-container {
      width: 100px;
      height: 100px;
    }
  }

  @media (min-width: 768px) {
    .profile-content {
      flex: 0 0 25%; /* Reduced width to give more space to github card */
      min-width: 260px; /* Prevent content from breaking on smaller tablets */
    }
  }
</style>
