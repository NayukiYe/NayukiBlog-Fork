---
const todos = [
  { text: "Refactor Blog Style", done: true },
  { text: "Add Dark Mode", done: false },
  { text: "Update Project List", done: false },
  { text: "Write New Article", done: false },
  { text: "Fix Mobile Layout", done: true },
  { text: "Learn Rust", done: false },
];
---

<div class="todo-card">
  <div class="todo-header">
    <span class="todo-title">To-Do List</span>
  </div>
  <div class="todo-list">
    {todos.map(todo => (
      <div class="todo-item" data-state={todo.done ? "checked" : "unchecked"}>
        <div class="todo-checkbox">
          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" class="check-icon"><polyline points="20 6 9 17 4 12"></polyline></svg>
        </div>
        <span class="todo-text">{todo.text}</span>
      </div>
    ))}
  </div>
</div>

<style>
  /* Todo Card Styles */
  .todo-card {
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 16px;
    padding: 1rem;
    height: 160px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
  }

  .todo-header {
    margin-bottom: 0.8rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .todo-title {
    font-size: 0.8rem;
    font-weight: 700;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .todo-list {
    overflow-y: auto;
    flex: 1;
    padding-right: 4px;
  }

  /* Custom Scrollbar for Todo List */
  .todo-list::-webkit-scrollbar {
    width: 4px;
  }
  .todo-list::-webkit-scrollbar-track {
    background: transparent;
  }
  .todo-list::-webkit-scrollbar-thumb {
    background: #f0f0f0;
    border-radius: 4px;
  }
  .todo-list::-webkit-scrollbar-thumb:hover {
    background: #e0e0e0;
  }

  .todo-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.35rem 0;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .todo-item:hover {
    opacity: 0.8;
  }

  .todo-checkbox {
    width: 16px;
    height: 16px;
    border: 2px solid #ddd;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .check-icon {
    opacity: 0;
    transform: scale(0.5);
    transition: all 0.2s ease;
    color: #fff;
  }

  .todo-text {
    font-size: 0.85rem;
    color: #444;
    transition: all 0.2s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Checked State */
  .todo-item[data-state="checked"] .todo-checkbox {
    background: #FF69B4;
    border-color: #FF69B4;
  }

  .todo-item[data-state="checked"] .check-icon {
    opacity: 1;
    transform: scale(1);
  }

  .todo-item[data-state="checked"] .todo-text {
    color: #aaa;
    text-decoration: line-through;
  }

  @media (min-width: 768px) {
    .todo-card {
      width: 220px; /* Fixed width on desktop */
      flex-shrink: 0;
    }
  }
</style>

<script>
  // Simple client-side logic for todo toggling
  const todoItems = document.querySelectorAll('.todo-item');
  todoItems.forEach(item => {
    item.addEventListener('click', () => {
      const currentState = item.getAttribute('data-state');
      const newState = currentState === 'checked' ? 'unchecked' : 'checked';
      item.setAttribute('data-state', newState);
    });
  });
</script>
