---
interface Todo {
  id: string | number;
  task: string;
  completed: boolean;
  priority?: string;
  type?: string;
}

interface Props {
  todos?: Todo[];
}

const { todos = [] } = Astro.props;

// Filter: Only show active (not completed) short-term tasks
const displayTodos = todos.filter(t => !t.completed && t.type === 'short-term');
---

<div class="todo-card">
  <div class="todo-header">
    <span class="todo-title">Short-term Goals</span>
  </div>
  <div class="todo-list">
    {displayTodos.length > 0 ? (
      displayTodos.map(todo => (
        <div class="todo-item">
          <div class="todo-checkbox"></div>
          <span class="todo-text">{todo.task}</span>
        </div>
      ))
    ) : (
      <div class="empty-text">No active tasks</div>
    )}
  </div>
</div>

<style>
  /* Todo Card Styles */
  .todo-card {
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 16px;
    padding: 1rem;
    height: 160px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
  }

  .todo-header {
    margin-bottom: 0.8rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .todo-title {
    font-size: 0.8rem;
    font-weight: 700;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .todo-list {
    overflow-y: auto;
    flex: 1;
    padding-right: 4px;
  }

  /* Custom Scrollbar for Todo List */
  .todo-list::-webkit-scrollbar {
    width: 4px;
  }
  .todo-list::-webkit-scrollbar-track {
    background: transparent;
  }
  .todo-list::-webkit-scrollbar-thumb {
    background: #f0f0f0;
    border-radius: 4px;
  }
  .todo-list::-webkit-scrollbar-thumb:hover {
    background: #e0e0e0;
  }

  .todo-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.35rem 0;
    cursor: default;
  }

  .todo-checkbox {
    width: 16px;
    height: 16px;
    border: 2px solid #ddd;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .todo-text {
    font-size: 0.85rem;
    color: #444;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .empty-text {
    font-size: 0.8rem;
    color: #999;
    text-align: center;
    padding-top: 1rem;
  }

  @media (min-width: 768px) {
    .todo-card {
      width: 220px; /* Fixed width on desktop */
      flex-shrink: 0;
    }
  }
</style>
