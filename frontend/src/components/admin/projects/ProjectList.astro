<div class="project-list-card">
    <div class="card-header">
        <span>Project List</span>
        <span class="count" id="project-count">0 projects</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-name">Name</th>
                    <th class="col-desc">Description</th>
                    <th class="col-status">Status</th>
                    <th class="col-stack">Tech Stack</th>
                    <th class="col-link">Link</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="project-table-body">
                <tr><td colspan="6" class="loading-text">Loading...</td></tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    interface Project {
        id: number;
        name: string;
        description?: string;
        link?: string;
        techStack?: string[];
        status?: string;
        visibility?: string;
    }

    async function fetchProjects() {
        const tbody = document.getElementById('project-table-body');
        const countSpan = document.getElementById('project-count');
        if(tbody) tbody.innerHTML = '<tr><td colspan="6" class="loading-text">Loading...</td></tr>';

        const urlParams = new URLSearchParams(window.location.search);
        const page = parseInt(urlParams.get('page') || '1');
        const pageSize = 10;
        const skip = (page - 1) * pageSize;

        const apiParams = new URLSearchParams();
        apiParams.append('skip', skip.toString());
        apiParams.append('limit', pageSize.toString());

        const status = urlParams.get('status');
        if (status && status !== 'all') apiParams.append('status', status);

        const techStacks = urlParams.getAll('tech_stack');
        techStacks.forEach(t => apiParams.append('tech_stack', t));

        try {
            const res = await fetch(`http://127.0.0.1:8000/api/admin/projects?${apiParams.toString()}`);
            if (!res.ok) throw new Error('Failed to fetch');
            const projects: Project[] = await res.json();

            if (countSpan) countSpan.textContent = `${projects.length} projects`;

            if (tbody) {
                if (projects.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6" class="loading-text">No projects found.</td></tr>';
                } else {
                    tbody.innerHTML = projects.map(project => `
                        <tr>
                            <td>${project.name}</td>
                            <td><div class="truncate" title="${project.description || ''}">${project.description || '-'}</div></td>
                            <td><span class="status-badge ${project.status?.toLowerCase() || 'unknown'}">${project.status || 'Unknown'}</span></td>
                            <td>${project.techStack ? project.techStack.map(t => `<span class="tag">${t}</span>`).join('') : '-'}</td>
                            <td>${project.link ? `<a href="${project.link}" target="_blank"><i class="fas fa-external-link-alt"></i></a>` : '-'}</td>
                            <td>
                                <button class="btn-icon edit" title="Edit" data-id="${project.id}" data-project='${JSON.stringify(project).replace(/'/g, "&#39;")}'><i class="fas fa-edit"></i></button>
                                <button class="btn-icon delete" title="Delete" data-id="${project.id}"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    `).join('');
                }
            }
        } catch (error) {
            console.error(error);
            if(tbody) tbody.innerHTML = '<tr><td colspan="6" class="error-text">Failed to load projects.</td></tr>';
        }
    }

    fetchProjects();

    const tbody = document.getElementById('project-table-body');
    tbody?.addEventListener('click', async (e) => {
        const target = e.target as HTMLElement;
        const btn = target.closest('button');
        if (!btn) return;

        if (btn.classList.contains('delete')) {
            const id = btn.getAttribute('data-id');
            if (id && confirm('Are you sure you want to delete this project?')) {
                try {
                    const res = await fetch(`http://127.0.0.1:8000/api/admin/projects/${id}`, {
                        method: 'DELETE'
                    });
                    if (res.ok) {
                        fetchProjects();
                        window.dispatchEvent(new CustomEvent('project-updated'));
                    } else {
                        alert('Failed to delete project');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Error deleting project');
                }
            }
        } else if (btn.classList.contains('edit')) {
            const projectData = btn.getAttribute('data-project');
            if (projectData) {
                const project = JSON.parse(projectData);
                window.dispatchEvent(new CustomEvent('edit-project', { detail: project }));
            }
        }
    });

    window.addEventListener('project-filter-change', () => {
        fetchProjects();
    });

    window.addEventListener('project-created', () => {
        fetchProjects();
    });

    window.addEventListener('popstate', () => {
        fetchProjects();
    });
</script>

<style>
    .project-list-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 600;
        color: #303133;
    }

    .count {
        font-size: 14px;
        color: #909399;
        font-weight: normal;
    }

    .table-container {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        table-layout: fixed;
    }

    .admin-table th {
        text-align: left;
        padding: 12px 16px;
        color: #909399;
        font-weight: 500;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
    }

    /* Column Widths */
    .col-name { width: 20%; }
    .col-desc { width: 35%; }
    .col-status { width: 10%; }
    .col-stack { width: 20%; }
    .col-link { width: 5%; }
    .col-actions { width: 10%; }

    .admin-table th:last-child {
        border-right: none;
    }

    /* Fix for dynamic content */
    .admin-table :global(td) {
        padding: 12px 16px;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
        color: #606266;
        vertical-align: middle;
    }

    .admin-table :global(td:last-child) {
        border-right: none;
    }

    /* Name column */
    .admin-table :global(td:first-child) {
        font-weight: 500;
        color: #303133;
    }

    /* Link column */
    .admin-table :global(a) {
        color: #409eff;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        border-radius: 4px;
        transition: background-color 0.3s;
    }
    .admin-table :global(a:hover) {
        background-color: #ecf5ff;
    }

    :global(.truncate) {
        width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    :global(.status-badge) {
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        background: #f4f4f5;
        color: #909399;
        display: inline-block;
    }

    :global(.status-badge.completed) { background: #f0f9eb; color: #67c23a; }
    :global(.status-badge.in-progress) { background: #ecf5ff; color: #409eff; }
    :global(.status-badge.planning) { background: #fdf6ec; color: #e6a23c; }

    .admin-table :global(.tag) {
        display: inline-block;
        background: #f4f4f5;
        color: #606266;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 12px;
        margin-right: 4px;
        margin-bottom: 4px;
    }

    :global(.btn-icon) {
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px 8px;
        font-size: 14px;
        transition: color 0.3s;
        margin-right: 4px;
    }

    :global(.btn-icon.edit) { color: #409eff; }
    :global(.btn-icon.edit:hover) { color: #66b1ff; }
    :global(.btn-icon.delete) { color: #f56c6c; }
    :global(.btn-icon.delete:hover) { color: #f78989; }

    :global(.loading-text), :global(.error-text) {
        text-align: center;
        padding: 20px;
        color: #909399;
    }
    :global(.error-text) { color: #f56c6c; }
</style>
