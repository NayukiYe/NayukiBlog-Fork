---
<div class="gallery-list-card">
    <div class="card-header">
        <span>Gallery List</span>
        <span class="count" id="gallery-count">0 images</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Tags</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="gallery-table-body">
                <tr><td colspan="5" class="loading-text">Loading...</td></tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    interface Gallery {
        id: number;
        title?: string;
        url: string;
        date?: string;
        tags?: string[];
    }

    async function fetchGallery() {
        const tbody = document.getElementById('gallery-table-body');
        const countSpan = document.getElementById('gallery-count');
        if(tbody) tbody.innerHTML = '<tr><td colspan="5" class="loading-text">Loading...</td></tr>';

        try {
            const res = await fetch('/api/gallery');
            if (!res.ok) throw new Error('Failed to fetch');
            const gallery: Gallery[] = await res.json();

            if (countSpan) countSpan.textContent = `${gallery.length} images`;

            if (tbody) {
                tbody.innerHTML = gallery.map(item => `
                    <tr>
                        <td><img src="${item.url}" alt="${item.title || 'gallery image'}" class="gallery-thumb"/></td>
                        <td>${item.title || '-'}</td>
                        <td>${item.date || '-'}</td>
                        <td>${item.tags ? item.tags.map(t => `<span class="tag">${t}</span>`).join('') : '-'}</td>
                        <td>
                            <button class="btn-icon edit" title="Edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-icon delete" title="Delete"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                `).join('');
            }
        } catch (error) {
            console.error(error);
            if(tbody) tbody.innerHTML = '<tr><td colspan="5" class="error-text">Failed to load gallery.</td></tr>';
        }
    }

    fetchGallery();
</script>

<style>
    .gallery-list-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 600;
        color: #303133;
    }

    .count {
        font-size: 14px;
        color: #909399;
        font-weight: normal;
    }

    .table-container {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    .admin-table th {
        text-align: left;
        padding: 12px 0;
        color: #909399;
        font-weight: 500;
        border-bottom: 1px solid #ebeef5;
    }

    .admin-table td {
        padding: 12px 0;
        border-bottom: 1px solid #ebeef5;
        color: #606266;
        vertical-align: middle;
    }

    .gallery-thumb {
        width: 80px;
        height: 60px;
        object-fit: cover;
        border-radius: 4px;
    }

    .tag {
        display: inline-block;
        background: #f4f4f5;
        color: #909399;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 12px;
        margin-right: 4px;
        margin-bottom: 4px;
    }

    .btn-icon {
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px 8px;
        font-size: 14px;
        transition: color 0.3s;
    }

    .btn-icon.edit { color: #000000; }
    .btn-icon.edit:hover { color: #333333; }
    .btn-icon.delete { color: #f56c6c; }
    .btn-icon.delete:hover { color: #f78989; }

    .loading-text, .error-text {
        text-align: center;
        padding: 20px;
        color: #909399;
    }
    .error-text { color: #f56c6c; }
</style>
