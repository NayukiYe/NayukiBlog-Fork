    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .pagination-controls {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .page-btn {
        padding: 6px 12px;
        background: #f4f4f5;
