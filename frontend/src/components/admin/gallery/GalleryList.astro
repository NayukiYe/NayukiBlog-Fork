---
interface Gallery {
  id: number;
  title?: string;
  url: string;
  date?: string;
  tags?: string[];
  status?: string;
}

interface Props {
  gallery?: Gallery[];
}

let { gallery = [] } = Astro.props;
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const tags = Astro.url.searchParams.getAll('tags');
const sort = Astro.url.searchParams.get('sort') || 'desc';
const status = Astro.url.searchParams.get('status');
const pageSize = 10;
const skip = (page - 1) * pageSize;
let hasNextPage = false;

// Fetch if not provided via props
if (gallery.length === 0) {
  try {
    const fetchLimit = pageSize + 1;
    const params = new URLSearchParams();
    params.append('skip', skip.toString());
    params.append('limit', fetchLimit.toString());
    params.append('sort', sort);
    if (status && status !== 'all') params.append('status', status);
    tags.forEach(tag => params.append('tags', tag));

    const response = await fetch(`http://127.0.0.1:8000/api/admin/gallery?${params.toString()}`);
    if (response.ok) {
      const data = await response.json();
      const mappedGallery = data.map((item: any) => ({
        id: item.id,
        title: item.title || '-',
        url: item.url,
        date: item.date || '-',
        tags: Array.isArray(item.tags) ? item.tags : [],
        status: item.status || 'published'
      }));

      if (mappedGallery.length > pageSize) {
        hasNextPage = true;
        gallery = mappedGallery.slice(0, pageSize);
      } else {
        hasNextPage = false;
        gallery = mappedGallery;
      }
    }
  } catch (e) {
    console.error("Failed to fetch gallery from API", e);
  }
} else {
  hasNextPage = gallery.length === pageSize;
}

const getPageUrl = (p: number) => {
  const params = new URLSearchParams(Astro.url.searchParams);
  params.set('page', p.toString());
  return `?${params.toString()}`;
};
---

<div class="page-wrapper">
  <h2 class="section-title">图库列表</h2>
  
  <div class="gallery-list-card">
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-image">Image</th>
                    <th class="col-title">Title</th>
                    <th class="col-date">Date</th>
                    <th class="col-tags">Tags</th>
                    <th class="col-status">Status</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="gallery-table-body">
                {gallery.length > 0 ? (
                    gallery.map((item) => (
                        <tr>
                            <td class="col-image">
                                <img src={item.url} alt={item.title || 'gallery image'} class="gallery-thumb" loading="lazy"/>
                            </td>
                            <td class="col-title">
                                <span class="title-text">{item.title}</span>
                            </td>
                            <td class="col-date">
                                <span class="date-text">{item.date}</span>
                            </td>
                            <td class="col-tags">
                                <div class="tags-wrapper">
                                    {item.tags && item.tags.map(t => <span class="tag-box">{t}</span>)}
                                </div>
                            </td>
                            <td class="col-status">
                                <span class={`status-badge ${item.status}`}>{item.status}</span>
                            </td>
                            <td class="col-actions">
                                <button class="btn-icon edit" title="Edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                </button>
                                <button class="btn-icon delete" title="Delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                </button>
                            </td>
                        </tr>
                    ))
                ) : (
                    <tr><td colspan="6" class="no-data">No images found</td></tr>
                )}
            </tbody>
        </table>
    </div>

    <div class="pagination-bar">
      <div class="pagination-controls">
        <a href={page > 1 ? getPageUrl(page - 1) : '#'} class={`btn-page ${page <= 1 ? 'disabled' : ''}`} aria-label="Previous Page">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
        </a>
        
        <div class="page-input-container">
          <input type="number" id="page-input" class="page-input" min="1" value={page} />
        </div>

        <a href={hasNextPage ? getPageUrl(page + 1) : '#'} class={`btn-page ${!hasNextPage ? 'disabled' : ''}`} aria-label="Next Page">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  const pageInput = document.getElementById('page-input') as HTMLInputElement;
  const tbody = document.getElementById('gallery-table-body');
  const paginationBar = document.querySelector('.pagination-bar');
  
  function updatePage(page: number) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', page.toString());
    window.history.pushState({}, '', url.toString());
    fetchAndRenderGallery();
  }

  if (pageInput) {
    pageInput.addEventListener('change', () => {
      let page = parseInt(pageInput.value);
      if (isNaN(page) || page < 1) page = 1;
      updatePage(page);
    });

    pageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        pageInput.blur();
      }
    });
  }

  window.addEventListener('gallery-filter-change', () => {
    fetchAndRenderGallery();
  });

  window.addEventListener('popstate', () => {
    fetchAndRenderGallery();
  });

  async function fetchAndRenderGallery() {
    if (!tbody) return;
    
    tbody.style.opacity = '0.5';

    const urlParams = new URLSearchParams(window.location.search);
    const page = parseInt(urlParams.get('page') || '1');
    const pageSize = 10;
    const skip = (page - 1) * pageSize;
    
    const fetchLimit = pageSize + 1;
    const apiParams = new URLSearchParams();
    apiParams.append('skip', skip.toString());
    apiParams.append('limit', fetchLimit.toString());
    
    const sort = urlParams.get('sort') || 'desc';
    apiParams.append('sort', sort);
    
    const status = urlParams.get('status');
    if (status && status !== 'all') apiParams.append('status', status);
    
    const tags = urlParams.getAll('tags');
    tags.forEach(tag => apiParams.append('tags', tag));

    try {
      const response = await fetch(`http://127.0.0.1:8000/api/admin/gallery?${apiParams.toString()}`);
      if (response.ok) {
        const data = await response.json();
        const mappedGallery = data.map((item: any) => ({
          id: item.id,
          title: item.title || '-',
          url: item.url,
          date: item.date || '-',
          tags: Array.isArray(item.tags) ? item.tags : [],
          status: item.status || 'published'
        }));

        let gallery = [];
        let hasNextPage = false;

        if (mappedGallery.length > pageSize) {
          hasNextPage = true;
          gallery = mappedGallery.slice(0, pageSize);
        } else {
          hasNextPage = false;
          gallery = mappedGallery;
        }

        renderTable(gallery);
        renderPagination(page, hasNextPage);
      }
    } catch (e) {
      console.error("Failed to fetch gallery", e);
    } finally {
      tbody.style.opacity = '1';
    }
  }

  function renderTable(gallery: any[]) {
    if (!tbody) return;
    
    if (gallery.length === 0) {
      tbody.innerHTML = `<tr><td colspan="6" class="no-data">No images found</td></tr>`;
      return;
    }

    tbody.innerHTML = gallery.map(item => `
      <tr>
        <td class="col-image">
            <img src="${item.url}" alt="${item.title || 'gallery image'}" class="gallery-thumb" loading="lazy"/>
        </td>
        <td class="col-title">
            <span class="title-text">${item.title}</span>
        </td>
        <td class="col-date">
            <span class="date-text">${item.date}</span>
        </td>
        <td class="col-tags">
            <div class="tags-wrapper">
                ${item.tags ? item.tags.map((t: string) => `<span class="tag-box">${t}</span>`).join('') : ''}
            </div>
        </td>
        <td class="col-status">
            <span class="status-badge ${item.status}">${item.status}</span>
        </td>
        <td class="col-actions">
            <button class="btn-icon edit" title="Edit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
            </button>
            <button class="btn-icon delete" title="Delete">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
            </button>
        </td>
      </tr>
    `).join('');
  }

  function renderPagination(page: number, hasNextPage: boolean) {
    if (!paginationBar) return;
    
    if (pageInput) pageInput.value = page.toString();

    const prevBtn = paginationBar.querySelector('a[aria-label="Previous Page"]') as HTMLAnchorElement | null;
    const nextBtn = paginationBar.querySelector('a[aria-label="Next Page"]') as HTMLAnchorElement | null;

    if (prevBtn) {
      if (page > 1) {
        prevBtn.classList.remove('disabled');
        prevBtn.setAttribute('href', '#');
        prevBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page - 1); };
      } else {
        prevBtn.classList.add('disabled');
        prevBtn.onclick = null;
      }
    }

    if (nextBtn) {
      if (hasNextPage) {
        nextBtn.classList.remove('disabled');
        nextBtn.setAttribute('href', '#');
        nextBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page + 1); };
      } else {
        nextBtn.classList.add('disabled');
        nextBtn.onclick = null;
      }
    }
  }
</script>

<style>
  :root {
    --bg-surface: #ffffff;
    --bg-hover: #f9fafb;
    --border-color: #e5e7eb;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --primary-color: #4f46e5;
    --danger-color: #ef4444;
    
    --status-published-bg: #d1fae5;
    --status-published-text: #065f46;
    --status-draft-bg: #fef3c7;
    --status-draft-text: #92400e;

    --font-main: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
  }

  .page-wrapper {
    width: 100%;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
    font-family: var(--font-main);
    letter-spacing: -0.025em;
  }

  .gallery-list-card {
    background: var(--bg-surface);
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    overflow: hidden;
    border: 1px solid var(--border-color);
    width: 100%;
    font-family: var(--font-main);
    display: flex;
    flex-direction: column;
  }

  .admin-table {
    width: 100%;
    border-collapse: collapse;
    font-family: var(--font-main);
    font-size: 0.875rem;
    table-layout: fixed;
    flex: 1;
  }

  .admin-table :global(th) {
    background-color: var(--bg-hover);
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    padding: 1rem 1.5rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
    border-right: 1px solid var(--border-color);
  }
  
  .admin-table :global(th:last-child) {
    border-right: none;
  }

  .admin-table :global(td) {
    padding: 1rem 1.5rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border-color);
    vertical-align: middle;
    border-right: 1px solid var(--border-color);
  }

  .admin-table :global(td:last-child) {
    border-right: none;
  }

  .admin-table :global(tr:last-child td) {
    border-bottom: none;
  }

  .admin-table :global(tr:hover td) {
    background-color: var(--bg-hover);
  }

  /* Column Specifics */
  :global(.col-image) { width: 15%; }
  :global(.col-title) { width: 25%; }
  :global(.col-date) { width: 15%; }
  :global(.col-tags) { width: 25%; }
  :global(.col-status) { width: 10%; }
  :global(.col-actions) { width: 10%; text-align: center; }

  :global(.gallery-thumb) {
    width: 80px;
    height: 60px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid var(--border-color);
  }

  :global(.title-text) {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text-primary);
  }

  :global(.date-text) {
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-family: var(--font-mono);
  }

  :global(.tags-wrapper) {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  :global(.tag-box) {
    display: inline-block;
    padding: 2px 6px;
    background-color: #f1f5f9;
    border: 1px solid #cbd5e1;
    border-radius: 4px;
    color: #475569;
    font-size: 0.75rem;
    font-weight: 500;
    line-height: 1.2;
  }

  :global(.status-badge) {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: capitalize;
  }

  :global(.status-badge.published) {
    background-color: var(--status-published-bg);
    color: var(--status-published-text);
  }

  :global(.status-badge.draft) {
    background-color: var(--status-draft-bg);
    color: var(--status-draft-text);
  }

  :global(.btn-icon) {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 6px;
    color: var(--text-secondary);
    transition: all 0.2s;
    margin-left: 0.25rem;
  }

  :global(.btn-icon:hover) {
    background-color: #e5e7eb;
  }

  :global(.btn-icon.edit:hover) {
    color: var(--primary-color);
    background-color: #e0e7ff;
  }

  :global(.btn-icon.delete:hover) {
    color: var(--danger-color);
    background-color: #fee2e2;
  }

  /* Pagination */
  :global(.pagination-bar) {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border-color);
    background-color: var(--bg-surface);
  }

  :global(.pagination-controls) {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  :global(.btn-page) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--bg-surface);
    color: #666;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.btn-page:hover:not(.disabled)) {
    background-color: #f5f5f5;
    color: #000;
    border-color: #ddd;
  }

  :global(.btn-page.disabled) {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
    background-color: var(--bg-surface);
  }

  :global(.page-input-container) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  :global(.page-input) {
    width: 40px;
    height: 32px;
    text-align: center;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    font-family: inherit;
    font-size: 0.9rem;
    color: var(--text-primary);
    outline: none;
    transition: border-color 0.2s;
    -moz-appearance: textfield;
  }
  :global(.page-input::-webkit-outer-spin-button),
  :global(.page-input::-webkit-inner-spin-button) {
    -webkit-appearance: none;
    margin: 0;
  }
  :global(.page-input:focus) {
    border-color: var(--text-primary);
  }

  :global(.no-data) {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }
</style>
