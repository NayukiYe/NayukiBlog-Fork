        pointer-events: none;
    }

    .page-info {
        font-size: 14px;
        color: #606266;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-input {
        width: 50px;
        padding: 4px;
        border: 1px solid #dcdfe6;
        border-radius: 4px;
        text-align: center;
        color: #606266;
    }
    
    .page-input:focus {
        outline: none;
        border-color: #409eff;
    }
</style>
