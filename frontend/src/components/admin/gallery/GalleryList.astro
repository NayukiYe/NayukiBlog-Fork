---
interface Gallery {
  id: number;
  title?: string;
  url: string;
  date?: string;
  tags?: string[];
  status?: string;
}

interface Props {
  gallery?: Gallery[];
}

let { gallery = [] } = Astro.props;
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const tags = Astro.url.searchParams.getAll('tags');
const sort = Astro.url.searchParams.get('sort') || 'desc';
const status = Astro.url.searchParams.get('status');
const pageSize = 10;
const skip = (page - 1) * pageSize;
let hasNextPage = false;

// Fetch if not provided via props
if (gallery.length === 0) {
  try {
    const fetchLimit = pageSize + 1;
    const params = new URLSearchParams();
    params.append('skip', skip.toString());
    params.append('limit', fetchLimit.toString());
    params.append('sort', sort);
    if (status && status !== 'all') params.append('status', status);
    tags.forEach(tag => params.append('tags', tag));

    const response = await fetch(`http://127.0.0.1:8000/api/admin/gallery?${params.toString()}`);
    if (response.ok) {
      const data = await response.json();
      const mappedGallery = data.map((item: any) => ({
        id: item.id,
        title: item.title || '-',
        url: item.url,
        date: item.date || '-',
        tags: Array.isArray(item.tags) ? item.tags : [],
        status: item.status || 'published'
      }));

      if (mappedGallery.length > pageSize) {
        hasNextPage = true;
        gallery = mappedGallery.slice(0, pageSize);
      } else {
        hasNextPage = false;
        gallery = mappedGallery;
      }
    }
  } catch (e) {
    console.error("Failed to fetch gallery from API", e);
  }
} else {
  hasNextPage = gallery.length === pageSize;
}

const getPageUrl = (p: number) => {
  const params = new URLSearchParams(Astro.url.searchParams);
  params.set('page', p.toString());
  return `?${params.toString()}`;
};
---

<div class="gallery-list-card">
    <div class="card-header">
        <span>图库列表</span>
        <span class="count" id="gallery-count">{gallery.length} images</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-image">Image</th>
                    <th class="col-title">Title</th>
                    <th class="col-date">Date</th>
                    <th class="col-tags">Tags</th>
                    <th class="col-status">Status</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="gallery-table-body">
                {gallery.length > 0 ? (
                    gallery.map((item) => (
                        <tr>
                            <td>
                                <img src={item.url} alt={item.title || 'gallery image'} class="gallery-thumb" loading="lazy"/>
                            </td>
                            <td>
                                <div class="truncate" title={item.title}>{item.title}</div>
                            </td>
                            <td>{item.date}</td>
                            <td>
                                {item.tags && item.tags.map(t => <span class="tag">{t}</span>)}
                            </td>
                            <td>
                                <span class={`status-badge ${item.status}`}>{item.status}</span>
                            </td>
                            <td>
                                <button class="btn-icon edit" title="Edit" data-id={item.id}><i class="fas fa-edit"></i></button>
                                <button class="btn-icon delete" title="Delete" data-id={item.id}><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    ))
                ) : (
                    <tr><td colspan="6" class="loading-text">No images found</td></tr>
                )}
            </tbody>
        </table>
    </div>

    <div class="pagination-container">
      <div class="pagination-controls">
        <a href={page > 1 ? getPageUrl(page - 1) : '#'} class={`page-btn ${page <= 1 ? 'disabled' : ''}`} aria-label="Previous Page">
          &lt;
        </a>
        
        <div class="page-info">
          Page <input type="number" id="page-input" class="page-input" min="1" value={page} />
        </div>

        <a href={hasNextPage ? getPageUrl(page + 1) : '#'} class={`page-btn ${!hasNextPage ? 'disabled' : ''}`} aria-label="Next Page">
          &gt;
        </a>
      </div>
    </div>
</div>

<script define:vars={{ initialGallery: gallery }}>
  window.initialGalleryData = initialGallery;
</script>

<script>
  // Define global alert function
  declare global {
    interface Window {
      showAdminAlert: (message: string, type?: 'error' | 'success' | 'info') => void;
      initialGalleryData: any[];
    }
  }

  const pageInput = document.getElementById('page-input') as HTMLInputElement;
  const tbody = document.getElementById('gallery-table-body');
  const countSpan = document.getElementById('gallery-count');
  const paginationBar = document.querySelector('.pagination-container');
  
  // Store current gallery items for edit access
  let currentGalleryItems: any[] = [];
  
  // Initialize from window data if available
  if (window.initialGalleryData) {
      currentGalleryItems = window.initialGalleryData;
      console.log('Initialized gallery items:', currentGalleryItems);
  }

  // Initialize event listeners on load
  attachEventListeners();

  function updatePage(page: number) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', page.toString());
    window.history.pushState({}, '', url.toString());
    fetchAndRenderGallery();
  }

  if (pageInput) {
    pageInput.addEventListener('change', () => {
      let page = parseInt(pageInput.value);
      if (isNaN(page) || page < 1) page = 1;
      updatePage(page);
    });

    pageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        pageInput.blur();
      }
    });
  }

  window.addEventListener('gallery-filter-change', () => {
    fetchAndRenderGallery();
  });

  window.addEventListener('popstate', () => {
    fetchAndRenderGallery();
  });

  async function fetchAndRenderGallery() {
    if (!tbody) return;
    
    tbody.style.opacity = '0.5';

    const urlParams = new URLSearchParams(window.location.search);
    const page = parseInt(urlParams.get('page') || '1');
    const pageSize = 10;
    const skip = (page - 1) * pageSize;
    
    const fetchLimit = pageSize + 1;
    const apiParams = new URLSearchParams();
    apiParams.append('skip', skip.toString());
    apiParams.append('limit', fetchLimit.toString());
    
    const sort = urlParams.get('sort') || 'desc';
    apiParams.append('sort', sort);
    
    const status = urlParams.get('status');
    if (status && status !== 'all') apiParams.append('status', status);
    
    const tags = urlParams.getAll('tags');
    tags.forEach(tag => apiParams.append('tags', tag));

    try {
      const response = await fetch(`http://127.0.0.1:8000/api/admin/gallery?${apiParams.toString()}`);
      if (response.ok) {
        const data = await response.json();
        const mappedGallery = data.map((item: any) => ({
          id: item.id,
          title: item.title || '-',
          url: item.url,
          date: item.date || '-',
          tags: Array.isArray(item.tags) ? item.tags : [],
          status: item.status || 'published'
        }));

        let gallery = [];
        let hasNextPage = false;

        if (mappedGallery.length > pageSize) {
          hasNextPage = true;
          gallery = mappedGallery.slice(0, pageSize);
        } else {
          hasNextPage = false;
          gallery = mappedGallery;
        }

        currentGalleryItems = gallery; // Store for edit access

        if (countSpan) countSpan.textContent = `${gallery.length} images`; 

        renderTable(gallery);
        renderPagination(page, hasNextPage);
      }
    } catch (e) {
      console.error("Failed to fetch gallery", e);
      if(tbody) tbody.innerHTML = '<tr><td colspan="6" class="error-text">Failed to load gallery.</td></tr>';
    } finally {
      if(tbody) tbody.style.opacity = '1';
    }
  }

  async function deleteGallery(id: number) {
    try {
        const response = await fetch(`http://127.0.0.1:8000/api/admin/gallery/${id}`, {
            method: 'DELETE'
        });
        if (response.ok) {
            window.showAdminAlert('Image deleted successfully', 'success');
            fetchAndRenderGallery();
        } else {
            if (response.status === 404) {
                window.showAdminAlert('Image already deleted or not found. Refreshing...', 'info');
                fetchAndRenderGallery();
            } else {
                window.showAdminAlert('Failed to delete image', 'error');
            }
        }
    } catch (error) {
        console.error('Error deleting image:', error);
        window.showAdminAlert('An error occurred while deleting', 'error');
    }
  }

  function renderTable(gallery: any[]) {
    if (!tbody) return;
    
    if (gallery.length === 0) {
      tbody.innerHTML = `<tr><td colspan="6" class="loading-text">No images found</td></tr>`;
      return;
    }

    tbody.innerHTML = gallery.map(item => `
      <tr>
        <td>
            <img src="${item.url}" alt="${item.title || 'gallery image'}" class="gallery-thumb" loading="lazy"/>
        </td>
        <td>
            <div class="truncate" title="${item.title}">${item.title}</div>
        </td>
        <td>${item.date}</td>
        <td>
            ${item.tags ? item.tags.map((t: string) => `<span class="tag">${t}</span>`).join('') : '-'}
        </td>
        <td>
            <span class="status-badge ${item.status}">${item.status}</span>
        </td>
        <td>
            <button class="btn-icon edit" title="Edit" data-id="${item.id}"><i class="fas fa-edit"></i></button>
            <button class="btn-icon delete" title="Delete" data-id="${item.id}"><i class="fas fa-trash"></i></button>
        </td>
      </tr>
    `).join('');

    attachEventListeners();
  }

  function attachEventListeners() {
    if (!tbody) return;

    // Add event listeners
    tbody.querySelectorAll('.edit').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const btnEl = e.currentTarget as HTMLElement;
            const idAttr = btnEl.getAttribute('data-id');
            const id = Number(idAttr);
            
            console.log('Edit clicked. ID attribute:', idAttr, 'Parsed ID:', id);
            console.log('Current items:', currentGalleryItems);

            const item = currentGalleryItems.find(g => g.id === id);
            if (item) {
                console.log('Dispatching edit-gallery event', item);
                window.dispatchEvent(new CustomEvent('edit-gallery', { detail: item }));
            } else {
                console.error('Item not found for ID:', id);
                // Fallback: try to construct item from row data if possible, or alert
                window.showAdminAlert('Error: Could not find image data for editing.', 'error');
            }
        });
    });

    tbody.querySelectorAll('.delete').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const btnEl = e.currentTarget as HTMLElement;
            const id = Number(btnEl.getAttribute('data-id'));
            console.log('Delete clicked. ID:', id);
            
            if (confirm('Are you sure you want to delete this image?')) {
                deleteGallery(id);
            }
        });
    });
  }

  function renderPagination(page: number, hasNextPage: boolean) {
    if (!paginationBar) return;
    
    if (pageInput) pageInput.value = page.toString();

    const prevBtn = paginationBar.querySelector('a[aria-label="Previous Page"]') as HTMLAnchorElement | null;
    const nextBtn = paginationBar.querySelector('a[aria-label="Next Page"]') as HTMLAnchorElement | null;

    if (prevBtn) {
      if (page > 1) {
        prevBtn.classList.remove('disabled');
        prevBtn.setAttribute('href', '#');
        prevBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page - 1); };
      } else {
        prevBtn.classList.add('disabled');
        prevBtn.onclick = null;
      }
    }

    if (nextBtn) {
      if (hasNextPage) {
        nextBtn.classList.remove('disabled');
        nextBtn.setAttribute('href', '#');
        nextBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page + 1); };
      } else {
        nextBtn.classList.add('disabled');
        nextBtn.onclick = null;
      }
    }
  }
</script>

<style>
