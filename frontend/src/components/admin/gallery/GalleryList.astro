        margin-right: 4px;
        margin-bottom: 4px;
    }

    :global(.status-badge) {
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        background: #f4f4f5;
        color: #909399;
        display: inline-block;
    }

    :global(.status-badge.published) { background: #d1fae5; color: #065f46; }
    :global(.status-badge.draft) { background: #fef3c7; color: #92400e; }

