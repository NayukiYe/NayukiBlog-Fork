<div class="book-list-card">
    <div class="card-header">
        <span>Library List</span>
        <span class="count" id="book-count">0 books</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-title">Title</th>
                    <th class="col-status">Status</th>
                    <th class="col-rating">Rating</th>
                    <th class="col-tags">Tags</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="book-table-body">
                <tr><td colspan="5" class="loading-text">Loading...</td></tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    interface Book {
        id: number;
        title: string;
        cover?: string;
        url?: string;
        status?: string;
        rating?: number;
        tags?: string[];
    }

    declare global {
        interface Window {
            showAdminAlert: (message: string, type?: 'error' | 'success' | 'info') => void;
        }
    }

    let currentBooks: Book[] = [];

    async function deleteBook(id: number) {
        try {
            const res = await fetch(`http://127.0.0.1:8000/api/admin/books/${id}`, {
                method: 'DELETE'
            });
            
            if (res.ok) {
                if (window.showAdminAlert) {
                    window.showAdminAlert('Book deleted successfully', 'success');
                } else {
                    alert('Book deleted successfully');
                }
                fetchBooks(); // Refresh list
            } else {
                const data = await res.json();
                const msg = data.detail || data.message || 'Failed to delete book';
                if (window.showAdminAlert) {
                    window.showAdminAlert(msg, 'error');
                } else {
                    alert(msg);
                }
            }
        } catch (e) {
            console.error(e);
            if (window.showAdminAlert) {
                window.showAdminAlert('An error occurred while deleting', 'error');
            } else {
                alert('An error occurred');
            }
        }
    }

    async function fetchBooks() {
        const tbody = document.getElementById('book-table-body');
        const countSpan = document.getElementById('book-count');
        if(tbody) tbody.innerHTML = '<tr><td colspan="5" class="loading-text">Loading...</td></tr>';

        const urlParams = new URLSearchParams(window.location.search);
        const apiParams = new URLSearchParams();
        
        const status = urlParams.get('status');
        if (status && status !== 'all') apiParams.append('status', status);
        
        const tags = urlParams.getAll('tags');
        tags.forEach(tag => apiParams.append('tags', tag));

        try {
            const res = await fetch(`http://127.0.0.1:8000/api/admin/books?${apiParams.toString()}`);
            if (!res.ok) throw new Error('Failed to fetch');
            const books: Book[] = await res.json();
            currentBooks = books;

            if (countSpan) countSpan.textContent = `${books.length} books`;

            if (tbody) {
                if (books.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5" class="loading-text">No books found.</td></tr>';
                    return;
                }
                tbody.innerHTML = books.map(book => `
                    <tr>
                        <td><div class="truncate" title="${book.title}">${book.title}</div></td>
                        <td><span class="status-badge ${book.status?.toLowerCase() || 'unknown'}">${book.status || 'Unknown'}</span></td>
                        <td><span class="rating-stars">${book.rating ? 'â˜…'.repeat(book.rating) : '-'}</span></td>
                        <td>${book.tags ? (typeof book.tags === 'string' ? JSON.parse(book.tags) : book.tags).map((t: string) => `<span class="tag">${t}</span>`).join('') : '-'}</td>
                        <td>
                            <button class="btn-icon edit" title="Edit" data-id="${book.id}"><i class="fas fa-edit"></i></button>
                            <button class="btn-icon delete" title="Delete" data-id="${book.id}"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                `).join('');

                // Add event listeners for edit buttons
                tbody.querySelectorAll('.edit').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const id = Number((e.currentTarget as HTMLElement).getAttribute('data-id'));
                        const book = currentBooks.find(b => b.id === id);
                        if (book) {
                            window.dispatchEvent(new CustomEvent('edit-book', { detail: book }));
                        }
                    });
                });

                // Add event listeners for delete buttons
                tbody.querySelectorAll('.delete').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const id = Number((e.currentTarget as HTMLElement).getAttribute('data-id'));
                        if (confirm('Are you sure you want to delete this book?')) {
                            deleteBook(id);
                        }
                    });
                });
            }
        } catch (error) {
            console.error(error);
            if(tbody) tbody.innerHTML = '<tr><td colspan="5" class="error-text">Failed to load books.</td></tr>';
        }
    }

    fetchBooks();

    window.addEventListener('book-filter-change', () => {
        fetchBooks();
    });

    window.addEventListener('popstate', () => {
        fetchBooks();
    });
</script>

<style>
    .book-list-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 600;
        color: #303133;
    }

    .count {
        font-size: 14px;
        color: #909399;
        font-weight: normal;
    }

    .table-container {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        table-layout: fixed;
    }

    .admin-table th {
        text-align: left;
        padding: 12px 16px;
        color: #909399;
        font-weight: 500;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
    }

    .admin-table th:last-child {
        border-right: none;
    }

    .admin-table :global(td) {
        padding: 12px 16px;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
        color: #606266;
        vertical-align: middle;
    }

    .admin-table :global(td:last-child) {
        border-right: none;
    }

    /* First column styling */
    .admin-table :global(td:first-child) {
        font-weight: 500;
        color: #303133;
    }

    /* Column Widths */
    .col-title { width: 30%; }
    .col-status { width: 15%; }
    .col-rating { width: 15%; }
    .col-tags { width: 25%; }
    .col-actions { width: 15%; }

    :global(.truncate) {
        width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    :global(.status-badge) {
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        background: #f4f4f5;
        color: #909399;
        display: inline-block;
    }

    :global(.status-badge.published) { background: #d1fae5; color: #065f46; }
    :global(.status-badge.draft) { background: #fef3c7; color: #92400e; }
    :global(.status-badge.archived) { background: #f3f4f6; color: #374151; }

    :global(.rating-stars) {
        color: #f7ba2a;
        letter-spacing: 2px;
    }

    :global(.tag) {
        display: inline-block;
        background: #f4f4f5;
        color: #606266;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 12px;
        margin-right: 4px;
        margin-bottom: 4px;
    }

    :global(.btn-icon) {
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px 8px;
        font-size: 14px;
        transition: color 0.3s;
        margin-right: 4px;
    }

    :global(.btn-icon.edit) { color: #409eff; }
    :global(.btn-icon.edit:hover) { color: #66b1ff; }
    :global(.btn-icon.delete) { color: #f56c6c; }
    :global(.btn-icon.delete:hover) { color: #f78989; }

    :global(.loading-text), :global(.error-text) {
        text-align: center;
        padding: 20px;
        color: #909399;
    }
    :global(.error-text) { color: #f56c6c; }
</style>
