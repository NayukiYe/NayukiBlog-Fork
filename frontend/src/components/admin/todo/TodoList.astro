---
interface Todo {
  id: number;
  task: string;
  completed: boolean;
  priority?: string;
  type?: string;
  progress: number;
  icon?: string;
  status?: string;
}

interface Props {
  todos?: Todo[];
}

let { todos = [] } = Astro.props;
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const priority = Astro.url.searchParams.get('priority');
const type = Astro.url.searchParams.get('type');
const status = Astro.url.searchParams.get('status');
const completed = Astro.url.searchParams.get('completed');
const sort = Astro.url.searchParams.get('sort') || 'desc';
const pageSize = 10;
const skip = (page - 1) * pageSize;
let hasNextPage = false;

// Fetch if not provided via props
if (todos.length === 0) {
  try {
    const fetchLimit = pageSize + 1;
    const params = new URLSearchParams();
    params.append('skip', skip.toString());
    params.append('limit', fetchLimit.toString());
    params.append('sort', sort);
    if (priority && priority !== 'all') params.append('priority', priority);
    if (type && type !== 'all') params.append('type', type);
    if (status && status !== 'all') params.append('status', status);
    if (completed && completed !== 'all') params.append('completed', completed);

    const response = await fetch(`/api/admin/todos?${params.toString()}`);
    if (response.ok) {
      const data = await response.json();
      const mappedTodos = data.map((item: any) => ({
        id: item.id,
        task: item.task,
        completed: item.completed,
        priority: item.priority,
        type: item.type,
        progress: item.progress,
        icon: item.icon,
        status: item.status || 'published'
      }));

      if (mappedTodos.length > pageSize) {
        hasNextPage = true;
        todos = mappedTodos.slice(0, pageSize);
      } else {
        hasNextPage = false;
        todos = mappedTodos;
      }
    }
  } catch (e) {
    console.error("Failed to fetch todos from API", e);
  }
} else {
  hasNextPage = todos.length === pageSize;
}

const getPageUrl = (p: number) => {
  const params = new URLSearchParams(Astro.url.searchParams);
  params.set('page', p.toString());
  return `?${params.toString()}`;
};
---

<div class="todo-list-card">
    <div class="card-header">
        <span>Todo List</span>
        <span class="count" id="todo-count">{todos.length} tasks</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-icon">Icon</th>
                    <th class="col-task">Task</th>
                    <th class="col-priority">Priority</th>
                    <th class="col-type">Type</th>
                    <th class="col-progress">Progress</th>
                    <th class="col-status">Status</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="todo-table-body">
                {todos.length > 0 ? (
                    todos.map((todo) => (
                        <tr>
                            <td>
                                {todo.icon ? (
                                    todo.icon.startsWith('<svg') ? (
                                        <Fragment set:html={todo.icon} />
                                    ) : todo.icon.startsWith('http') || todo.icon.startsWith('/') ? (
                                        <img src={todo.icon} alt="icon" class="task-icon-img" />
                                    ) : (
                                        <i class={`${todo.icon} task-icon`}></i>
                                    )
                                ) : null}
                            </td>
                            <td>
                                <div class="truncate" title={todo.task}>{todo.task}</div>
                            </td>
                            <td>
                                <span class={`priority-badge ${todo.priority?.toLowerCase() || 'normal'}`}>{todo.priority || 'Normal'}</span>
                            </td>
                            <td>
                                <span class="tag">{todo.type || '-'}</span>
                            </td>
                            <td>
                                <div class="progress-wrapper">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style={`width: ${todo.progress}%`}></div>
                                    </div>
                                    <span class="progress-text">{todo.progress}%</span>
                                </div>
                            </td>
                            <td>
                                <div class="status-group">
                                    <span class={`status-badge ${todo.status}`}>{todo.status}</span>
                                    <span class={`status-badge ${todo.completed ? 'completed' : 'pending'}`}>
                                        {todo.completed ? 'Done' : 'Pending'}
                                    </span>
                                </div>
                            </td>
                            <td>
                                <button class="btn-icon edit" title="Edit" data-id={todo.id}><i class="fas fa-edit"></i></button>
                                <button class="btn-icon delete" title="Delete" data-id={todo.id}><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    ))
                ) : (
                    <tr><td colspan="7" class="loading-text">No tasks found</td></tr>
                )}
            </tbody>
        </table>
    </div>

    <div class="pagination-container">
      <div class="pagination-controls">
        <a href={page > 1 ? getPageUrl(page - 1) : '#'} class={`page-btn ${page <= 1 ? 'disabled' : ''}`} aria-label="Previous Page">
          &lt;
        </a>
        
        <div class="page-info">
          Page <input type="number" id="page-input" class="page-input" min="1" value={page} />
        </div>

        <a href={hasNextPage ? getPageUrl(page + 1) : '#'} class={`page-btn ${!hasNextPage ? 'disabled' : ''}`} aria-label="Next Page">
          &gt;
        </a>
      </div>
    </div>
</div>

<script define:vars={{ initialTodos: todos }}>
  window.initialTodoData = initialTodos;
</script>

<script>
  // Define global alert function
  declare global {
    interface Window {
      showAdminAlert: (message: string, type?: 'error' | 'success' | 'info') => void;
      initialTodoData: any[];
    }
  }

  const pageInput = document.getElementById('page-input') as HTMLInputElement;
  const tbody = document.getElementById('todo-table-body');
  const countSpan = document.getElementById('todo-count');
  const paginationBar = document.querySelector('.pagination-container');
  
  // Store current todo items for edit access
  let currentTodoItems: any[] = [];
  
  // Initialize from window data if available
  if (window.initialTodoData) {
      currentTodoItems = window.initialTodoData;
  }

  // Initialize event listeners on load
  attachEventListeners();

  function updatePage(page: number) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', page.toString());
    window.history.pushState({}, '', url.toString());
    fetchAndRenderTodos();
  }

  if (pageInput) {
    pageInput.addEventListener('change', () => {
      let page = parseInt(pageInput.value);
      if (isNaN(page) || page < 1) page = 1;
      updatePage(page);
    });

    pageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        pageInput.blur();
      }
    });
  }

  window.addEventListener('todo-filter-change', () => {
    fetchAndRenderTodos();
  });

  window.addEventListener('popstate', () => {
    fetchAndRenderTodos();
  });

  async function fetchAndRenderTodos() {
    if (!tbody) return;
    
    tbody.style.opacity = '0.5';

    const urlParams = new URLSearchParams(window.location.search);
    const page = parseInt(urlParams.get('page') || '1');
    const pageSize = 10;
    const skip = (page - 1) * pageSize;
    
    const fetchLimit = pageSize + 1;
    const apiParams = new URLSearchParams();
    apiParams.append('skip', skip.toString());
    apiParams.append('limit', fetchLimit.toString());
    
    const sort = urlParams.get('sort') || 'desc';
    apiParams.append('sort', sort);
    
    const priority = urlParams.get('priority');
    if (priority && priority !== 'all') apiParams.append('priority', priority);
    
    const type = urlParams.get('type');
    if (type && type !== 'all') apiParams.append('type', type);
    
    const status = urlParams.get('status');
    if (status && status !== 'all') apiParams.append('status', status);

    const completed = urlParams.get('completed');
    if (completed && completed !== 'all') apiParams.append('completed', completed);

    try {
      const response = await fetch(`/api/admin/todos?${apiParams.toString()}`);
      if (response.ok) {
        const data = await response.json();
        const mappedTodos = data.map((item: any) => ({
          id: item.id,
          task: item.task,
          completed: item.completed,
          priority: item.priority,
          type: item.type,
          progress: item.progress,
          icon: item.icon,
          status: item.status || 'published'
        }));

        let todos = [];
        let hasNextPage = false;

        if (mappedTodos.length > pageSize) {
          hasNextPage = true;
          todos = mappedTodos.slice(0, pageSize);
        } else {
          hasNextPage = false;
          todos = mappedTodos;
        }

        currentTodoItems = todos; // Store for edit access

        if (countSpan) countSpan.textContent = `${todos.length} tasks`;

        renderTable(todos);
        renderPagination(page, hasNextPage);
      }
    } catch (e) {
      console.error("Failed to fetch todos", e);
      if(tbody) tbody.innerHTML = '<tr><td colspan="7" class="error-text">Failed to load tasks.</td></tr>';
    } finally {
      if(tbody) tbody.style.opacity = '1';
    }
  }

  async function deleteTodo(id: number) {
    try {
        const response = await fetch(`/api/admin/todos/${id}`, {
            method: 'DELETE'
        });
        if (response.ok) {
            window.showAdminAlert('Task deleted successfully', 'success');
            fetchAndRenderTodos();
        } else {
            if (response.status === 404) {
                window.showAdminAlert('Task already deleted or not found. Refreshing...', 'info');
                fetchAndRenderTodos();
            } else {
                window.showAdminAlert('Failed to delete task', 'error');
            }
        }
    } catch (error) {
        console.error('Error deleting task:', error);
        window.showAdminAlert('An error occurred while deleting', 'error');
    }
  }

  function renderTable(todos: any[]) {
    if (!tbody) return;

    const getIconHtml = (icon: string) => {
        if (!icon) return '';
        if (icon.startsWith('<svg')) return icon;
        if (icon.startsWith('http') || icon.startsWith('/')) return `<img src="${icon}" class="task-icon-img" />`;
        return `<i class="${icon} task-icon"></i>`;
    };
    
    if (todos.length === 0) {
      tbody.innerHTML = `<tr><td colspan="7" class="loading-text">No tasks found</td></tr>`;
      return;
    }

    tbody.innerHTML = todos.map(todo => `
      <tr>
        <td>
            ${getIconHtml(todo.icon)}
        </td>
        <td>
            <div class="truncate" title="${todo.task}">${todo.task}</div>
        </td>
        <td>
            <span class="priority-badge ${todo.priority?.toLowerCase() || 'normal'}">${todo.priority || 'Normal'}</span>
        </td>
        <td>
            <span class="tag">${todo.type || '-'}</span>
        </td>
        <td>
            <div class="progress-wrapper">
                <div class="progress-bar">
                    <div class="progress-fill" style="width: ${todo.progress}%"></div>
                </div>
                <span class="progress-text">${todo.progress}%</span>
            </div>
        </td>
        <td>
            <div class="status-group">
                <span class="status-badge ${todo.status}">${todo.status}</span>
                <span class="status-badge ${todo.completed ? 'completed' : 'pending'}">
                    ${todo.completed ? 'Done' : 'Pending'}
                </span>
            </div>
        </td>
        <td>
            <button class="btn-icon edit" title="Edit" data-id="${todo.id}"><i class="fas fa-edit"></i></button>
            <button class="btn-icon delete" title="Delete" data-id="${todo.id}"><i class="fas fa-trash"></i></button>
        </td>
      </tr>
    `).join('');

    attachEventListeners();
  }

  function attachEventListeners() {
    if (!tbody) return;

    // Add event listeners
    tbody.querySelectorAll('.edit').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const btnEl = e.currentTarget as HTMLElement;
            const id = Number(btnEl.getAttribute('data-id'));
            const item = currentTodoItems.find(t => t.id === id);
            if (item) {
                window.dispatchEvent(new CustomEvent('edit-todo', { detail: item }));
            }
        });
    });

    tbody.querySelectorAll('.delete').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const btnEl = e.currentTarget as HTMLElement;
            const id = Number(btnEl.getAttribute('data-id'));
            if (confirm('Are you sure you want to delete this task?')) {
                deleteTodo(id);
            }
        });
    });
  }

  function renderPagination(page: number, hasNextPage: boolean) {
    if (!paginationBar) return;
    
    if (pageInput) pageInput.value = page.toString();

    const prevBtn = paginationBar.querySelector('a[aria-label="Previous Page"]') as HTMLAnchorElement | null;
    const nextBtn = paginationBar.querySelector('a[aria-label="Next Page"]') as HTMLAnchorElement | null;

    if (prevBtn) {
      if (page > 1) {
        prevBtn.classList.remove('disabled');
        prevBtn.setAttribute('href', '#');
        prevBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page - 1); };
      } else {
        prevBtn.classList.add('disabled');
        prevBtn.onclick = null;
      }
    }

    if (nextBtn) {
      if (hasNextPage) {
        nextBtn.classList.remove('disabled');
        nextBtn.setAttribute('href', '#');
        nextBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page + 1); };
      } else {
        nextBtn.classList.add('disabled');
        nextBtn.onclick = null;
      }
    }
  }
</script>

