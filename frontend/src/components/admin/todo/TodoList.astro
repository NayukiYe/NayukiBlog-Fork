---
interface Todo {
  id: number;
  task: string;
  completed: boolean;
  priority?: string;
  type?: string;
  progress: number;
  icon?: string;
  status?: string;
}

interface Props {
  todos?: Todo[];
}

let { todos = [] } = Astro.props;
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const priority = Astro.url.searchParams.get('priority');
const type = Astro.url.searchParams.get('type');
const status = Astro.url.searchParams.get('status');
const completed = Astro.url.searchParams.get('completed');
const sort = Astro.url.searchParams.get('sort') || 'desc';
const pageSize = 10;
const skip = (page - 1) * pageSize;
let hasNextPage = false;

// Fetch if not provided via props
if (todos.length === 0) {
  try {
    const fetchLimit = pageSize + 1;
    const params = new URLSearchParams();
    params.append('skip', skip.toString());
    params.append('limit', fetchLimit.toString());
    params.append('sort', sort);
    if (priority && priority !== 'all') params.append('priority', priority);
    if (type && type !== 'all') params.append('type', type);
    if (status && status !== 'all') params.append('status', status);
    if (completed && completed !== 'all') params.append('completed', completed);

    const response = await fetch(`http://127.0.0.1:8000/api/admin/todos?${params.toString()}`);
    if (response.ok) {
      const data = await response.json();
      const mappedTodos = data.map((item: any) => ({
        id: item.id,
        task: item.task,
        completed: item.completed,
        priority: item.priority,
        type: item.type,
        progress: item.progress,
        icon: item.icon,
        status: item.status || 'published'
      }));

      if (mappedTodos.length > pageSize) {
        hasNextPage = true;
        todos = mappedTodos.slice(0, pageSize);
      } else {
        hasNextPage = false;
        todos = mappedTodos;
      }
    }
  } catch (e) {
    console.error("Failed to fetch todos from API", e);
  }
} else {
  hasNextPage = todos.length === pageSize;
}

const getPageUrl = (p: number) => {
  const params = new URLSearchParams(Astro.url.searchParams);
  params.set('page', p.toString());
  return `?${params.toString()}`;
};
---

<div class="page-wrapper">
  <h2 class="section-title">待办事项</h2>
  
  <div class="todo-list-card">
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-icon">Icon</th>
                    <th class="col-task">Task</th>
                    <th class="col-priority">Priority</th>
                    <th class="col-type">Type</th>
                    <th class="col-progress">Progress</th>
                    <th class="col-status-group">Status</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="todo-table-body">
                {todos.length > 0 ? (
                    todos.map((todo) => (
                        <tr>
                            <td class="col-icon">
                                {todo.icon && <i class={`${todo.icon} task-icon`}></i>}
                            </td>
                            <td class="col-task">
                                <span class="task-text">{todo.task}</span>
                            </td>
                            <td class="col-priority">
                                <span class={`priority-badge ${todo.priority?.toLowerCase() || 'normal'}`}>{todo.priority || 'Normal'}</span>
                            </td>
                            <td class="col-type">
                                <span class="type-text">{todo.type || '-'}</span>
                            </td>
                            <td class="col-progress">
                                <div class="progress-wrapper">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style={`width: ${todo.progress}%`}></div>
                                    </div>
                                    <span class="progress-text">{todo.progress}%</span>
                                </div>
                            </td>
                            <td class="col-status-group">
                                <div class="status-badges">
                                    <span class={`pub-status-badge ${todo.status}`}>{todo.status}</span>
                                    <span class={`completion-badge ${todo.completed ? 'completed' : 'pending'}`}>
                                        {todo.completed ? 'Done' : 'Pending'}
                                    </span>
                                </div>
                            </td>
                            <td class="col-actions">
                                <button class="btn-icon edit" title="Edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                </button>
                                <button class="btn-icon delete" title="Delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                </button>
                            </td>
                        </tr>
                    ))
                ) : (
                    <tr><td colspan="7" class="no-data">No tasks found</td></tr>
                )}
            </tbody>
        </table>
    </div>

    <div class="pagination-bar">
      <div class="pagination-controls">
        <a href={page > 1 ? getPageUrl(page - 1) : '#'} class={`btn-page ${page <= 1 ? 'disabled' : ''}`} aria-label="Previous Page">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
        </a>
        
        <div class="page-input-container">
          <input type="number" id="page-input" class="page-input" min="1" value={page} />
        </div>

        <a href={hasNextPage ? getPageUrl(page + 1) : '#'} class={`btn-page ${!hasNextPage ? 'disabled' : ''}`} aria-label="Next Page">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  const pageInput = document.getElementById('page-input') as HTMLInputElement;
  const tbody = document.getElementById('todo-table-body');
  const paginationBar = document.querySelector('.pagination-bar');
  
  function updatePage(page: number) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', page.toString());
    window.history.pushState({}, '', url.toString());
    fetchAndRenderTodos();
  }

  if (pageInput) {
    pageInput.addEventListener('change', () => {
      let page = parseInt(pageInput.value);
      if (isNaN(page) || page < 1) page = 1;
      updatePage(page);
    });

    pageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        pageInput.blur();
      }
    });
  }

  window.addEventListener('todo-filter-change', () => {
    fetchAndRenderTodos();
  });

  window.addEventListener('popstate', () => {
    fetchAndRenderTodos();
  });

  async function fetchAndRenderTodos() {
    if (!tbody) return;
    
    tbody.style.opacity = '0.5';

    const urlParams = new URLSearchParams(window.location.search);
    const page = parseInt(urlParams.get('page') || '1');
    const pageSize = 10;
    const skip = (page - 1) * pageSize;
    
    const fetchLimit = pageSize + 1;
    const apiParams = new URLSearchParams();
    apiParams.append('skip', skip.toString());
    apiParams.append('limit', fetchLimit.toString());
    
    const sort = urlParams.get('sort') || 'desc';
    apiParams.append('sort', sort);
    
    const priority = urlParams.get('priority');
    if (priority && priority !== 'all') apiParams.append('priority', priority);
    
    const type = urlParams.get('type');
    if (type && type !== 'all') apiParams.append('type', type);
    
    const status = urlParams.get('status');
    if (status && status !== 'all') apiParams.append('status', status);

    const completed = urlParams.get('completed');
    if (completed && completed !== 'all') apiParams.append('completed', completed);

    try {
      const response = await fetch(`http://127.0.0.1:8000/api/admin/todos?${apiParams.toString()}`);
      if (response.ok) {
        const data = await response.json();
        const mappedTodos = data.map((item: any) => ({
          id: item.id,
          task: item.task,
          completed: item.completed,
          priority: item.priority,
          type: item.type,
          progress: item.progress,
          icon: item.icon,
          status: item.status || 'published'
        }));

        let todos = [];
        let hasNextPage = false;

        if (mappedTodos.length > pageSize) {
          hasNextPage = true;
          todos = mappedTodos.slice(0, pageSize);
        } else {
          hasNextPage = false;
          todos = mappedTodos;
        }

        renderTable(todos);
        renderPagination(page, hasNextPage);
      }
    } catch (e) {
      console.error("Failed to fetch todos", e);
    } finally {
      tbody.style.opacity = '1';
    }
  }

  function renderTable(todos: any[]) {
    if (!tbody) return;
    
    if (todos.length === 0) {
      tbody.innerHTML = `<tr><td colspan="7" class="no-data">No tasks found</td></tr>`;
      return;
    }

    tbody.innerHTML = todos.map(todo => `
      <tr>
        <td class="col-icon">
            ${todo.icon ? `<i class="${todo.icon} task-icon"></i>` : ''}
        </td>
        <td class="col-task">
            <span class="task-text">${todo.task}</span>
        </td>
        <td class="col-priority">
            <span class="priority-badge ${todo.priority?.toLowerCase() || 'normal'}">${todo.priority || 'Normal'}</span>
        </td>
        <td class="col-type">
            <span class="type-text">${todo.type || '-'}</span>
        </td>
        <td class="col-progress">
            <div class="progress-wrapper">
                <div class="progress-bar">
                    <div class="progress-fill" style="width: ${todo.progress}%"></div>
                </div>
                <span class="progress-text">${todo.progress}%</span>
            </div>
        </td>
        <td class="col-status-group">
            <div class="status-badges">
                <span class="pub-status-badge ${todo.status}">${todo.status}</span>
                <span class="completion-badge ${todo.completed ? 'completed' : 'pending'}">
                    ${todo.completed ? 'Done' : 'Pending'}
                </span>
            </div>
        </td>
        <td class="col-actions">
            <button class="btn-icon edit" title="Edit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
            </button>
            <button class="btn-icon delete" title="Delete">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
            </button>
        </td>
      </tr>
    `).join('');
  }

  function renderPagination(page: number, hasNextPage: boolean) {
    if (!paginationBar) return;
    
    if (pageInput) pageInput.value = page.toString();

    const prevBtn = paginationBar.querySelector('a[aria-label="Previous Page"]') as HTMLAnchorElement | null;
    const nextBtn = paginationBar.querySelector('a[aria-label="Next Page"]') as HTMLAnchorElement | null;

    if (prevBtn) {
      if (page > 1) {
        prevBtn.classList.remove('disabled');
        prevBtn.setAttribute('href', '#');
        prevBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page - 1); };
      } else {
        prevBtn.classList.add('disabled');
        prevBtn.onclick = null;
      }
    }

    if (nextBtn) {
      if (hasNextPage) {
        nextBtn.classList.remove('disabled');
        nextBtn.setAttribute('href', '#');
        nextBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page + 1); };
      } else {
        nextBtn.classList.add('disabled');
        nextBtn.onclick = null;
      }
    }
  }
</script>

<style>
  :root {
    --bg-surface: #ffffff;
    --bg-hover: #f9fafb;
    --border-color: #e5e7eb;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --primary-color: #4f46e5;
    --danger-color: #ef4444;
    
    --status-published-bg: #d1fae5;
    --status-published-text: #065f46;
    --status-draft-bg: #fef3c7;
    --status-draft-text: #92400e;

    --font-main: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
  }

  .page-wrapper {
    width: 100%;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
    font-family: var(--font-main);
    letter-spacing: -0.025em;
  }

  .todo-list-card {
    background: var(--bg-surface);
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    overflow: hidden;
    border: 1px solid var(--border-color);
    width: 100%;
    font-family: var(--font-main);
    display: flex;
    flex-direction: column;
  }

  .admin-table {
    width: 100%;
    border-collapse: collapse;
    font-family: var(--font-main);
    font-size: 0.875rem;
    table-layout: fixed;
    flex: 1;
  }

  .admin-table :global(th) {
    background-color: var(--bg-hover);
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    padding: 1rem 1.5rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
    border-right: 1px solid var(--border-color);
  }
  
  .admin-table :global(th:last-child) {
    border-right: none;
  }

  .admin-table :global(td) {
    padding: 1rem 1.5rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border-color);
    vertical-align: middle;
    border-right: 1px solid var(--border-color);
  }

  .admin-table :global(td:last-child) {
    border-right: none;
  }

  .admin-table :global(tr:last-child td) {
    border-bottom: none;
  }

  .admin-table :global(tr:hover td) {
    background-color: var(--bg-hover);
  }

  /* Column Specifics */
  :global(.col-icon) { width: 5%; text-align: center; }
  :global(.col-task) { width: 25%; }
  :global(.col-priority) { width: 10%; }
  :global(.col-type) { width: 10%; }
  :global(.col-progress) { width: 20%; }
  :global(.col-status-group) { width: 20%; }
  :global(.col-actions) { width: 10%; text-align: center; }

  :global(.task-icon) {
    color: var(--text-secondary);
    font-size: 1.1em;
    display: inline-block;
    min-width: 1.2em;
    text-align: center;
    line-height: 1;
  }

  :global(.task-text) {
    font-weight: 600;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }

  :global(.priority-badge) {
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
    background: #f4f4f5;
    color: #909399;
  }
  :global(.priority-badge.high) { background: #fef0f0; color: #f56c6c; }
  :global(.priority-badge.medium) { background: #fdf6ec; color: #e6a23c; }
  :global(.priority-badge.low) { background: #f0f9eb; color: #67c23a; }

  :global(.progress-wrapper) {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  :global(.progress-bar) {
    flex: 1;
    height: 6px;
    background: #ebeef5;
    border-radius: 3px;
    overflow: hidden;
  }

  :global(.progress-fill) {
    height: 100%;
    background: #000000;
    border-radius: 3px;
  }

  :global(.progress-text) {
    font-size: 0.75rem;
    color: var(--text-secondary);
    width: 30px;
    text-align: right;
  }

  :global(.status-badges) {
    display: flex;
    flex-direction: row;
    gap: 6px;
    align-items: center;
  }

  :global(.pub-status-badge), :global(.completion-badge) {
    display: inline-block;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: capitalize;
    line-height: 1.2;
  }

  :global(.pub-status-badge.published) {
    background-color: var(--status-published-bg);
    color: var(--status-published-text);
  }

  :global(.pub-status-badge.draft) {
    background-color: var(--status-draft-bg);
    color: var(--status-draft-text);
  }

  :global(.completion-badge.completed) {
    background-color: #f0f9eb;
    color: #67c23a;
    border: 1px solid #e1f3d8;
  }

  :global(.completion-badge.pending) {
    background-color: #f4f4f5;
    color: #909399;
    border: 1px solid #e9e9eb;
  }

  :global(.btn-icon) {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 6px;
    color: var(--text-secondary);
    transition: all 0.2s;
    margin-left: 0.25rem;
  }

  :global(.btn-icon:hover) {
    background-color: #e5e7eb;
  }

  :global(.btn-icon.edit:hover) {
    color: var(--primary-color);
    background-color: #e0e7ff;
  }

  :global(.btn-icon.delete:hover) {
    color: var(--danger-color);
    background-color: #fee2e2;
  }

  /* Pagination */
  :global(.pagination-bar) {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border-color);
    background-color: var(--bg-surface);
  }

  :global(.pagination-controls) {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  :global(.btn-page) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--bg-surface);
    color: #666;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.btn-page:hover:not(.disabled)) {
    background-color: #f5f5f5;
    color: #000;
    border-color: #ddd;
  }

  :global(.btn-page.disabled) {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
    background-color: var(--bg-surface);
  }

  :global(.page-input-container) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  :global(.page-input) {
    width: 40px;
    height: 32px;
    text-align: center;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    font-family: inherit;
    font-size: 0.9rem;
    color: var(--text-primary);
    outline: none;
    transition: border-color 0.2s;
    -moz-appearance: textfield;
  }
  :global(.page-input::-webkit-outer-spin-button),
  :global(.page-input::-webkit-inner-spin-button) {
    -webkit-appearance: none;
    margin: 0;
  }
  :global(.page-input:focus) {
    border-color: var(--text-primary);
  }

  :global(.no-data) {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }
</style>
