        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 600;
        color: #303133;
    }

    .count {
        font-size: 14px;
        color: #909399;
        font-weight: normal;
    }

    .table-container {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        table-layout: fixed;
    }

    .admin-table th {
        text-align: left;
        padding: 12px 16px;
        color: #909399;
        font-weight: 500;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
    }

    .admin-table th:last-child {
        border-right: none;
    }

    .admin-table :global(td) {
        padding: 12px 16px;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
        color: #606266;
        vertical-align: middle;
    }

    .admin-table :global(td:last-child) {
        border-right: none;
    }

    /* Column Widths */
    .col-icon { width: 60px; text-align: center; }
    .col-name { width: 15%; }
    .col-desc { width: 30%; }
    .col-url { width: 60px; text-align: center; }
    .col-category { width: 15%; }
    .col-status { width: 10%; }
    .col-actions { width: 100px; }

    :global(.tool-icon) {
        width: 24px;
        height: 24px;
        object-fit: contain;
    }
    
    :global(.col-icon svg) {
        width: 24px;
        height: 24px;
        color: #909399;
    }

    :global(.no-icon) {
        width: 24px;
        height: 24px;
        background: #f0f2f5;
        border-radius: 4px;
        margin: 0 auto;
    }

    :global(.name-text) {
        font-weight: 500;
        color: #303133;
    }

    :global(.truncate) {
        width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    :global(.url-link) {
        color: #409eff;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        border-radius: 4px;
        transition: background-color 0.3s;
    }
    :global(.url-link:hover) {
        background-color: #ecf5ff;
    }

    :global(.category-badge) {
        display: inline-block;
        padding: 2px 8px;
        background-color: #f4f4f5;
        color: #606266;
        border-radius: 4px;
        font-size: 12px;
    }

    :global(.status-badge) {
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        background: #f4f4f5;
        color: #909399;
        display: inline-block;
    }

    :global(.status-badge.published) { background: #d1fae5; color: #065f46; }
    :global(.status-badge.draft) { background: #fef3c7; color: #92400e; }
    :global(.status-badge.archived) { background: #f3f4f6; color: #374151; }

    :global(.btn-icon) {
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px 8px;
        font-size: 14px;
        transition: color 0.3s;
        margin-right: 4px;
    }

    :global(.btn-icon.edit) { color: #409eff; }
    :global(.btn-icon.edit:hover) { color: #66b1ff; }
    :global(.btn-icon.delete) { color: #f56c6c; }
    :global(.btn-icon.delete:hover) { color: #f78989; }

    :global(.loading-text), :global(.error-text) {
        text-align: center;
        padding: 20px;
        color: #909399;
    }
    :global(.error-text) { color: #f56c6c; }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .pagination-controls {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .page-btn {
        padding: 6px 12px;
        background: #f4f4f5;
        border: 1px solid #dcdfe6;
        border-radius: 4px;
        cursor: pointer;
        color: #606266;
        text-decoration: none;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .page-btn:hover:not(.disabled) {
        color: #409eff;
        border-color: #c6e2ff;
        background-color: #ecf5ff;
    }

    .page-btn.disabled {
        cursor: not-allowed;
        color: #c0c4cc;
        background-color: #f4f4f5;
        pointer-events: none;
    }

    .page-info {
        font-size: 14px;
        color: #606266;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .page-input {
        width: 50px;
        padding: 4px;
        border: 1px solid #dcdfe6;
        border-radius: 4px;
        text-align: center;
        color: #606266;
    }
    
    .page-input:focus {
        outline: none;
        border-color: #409eff;
    }
</style>
