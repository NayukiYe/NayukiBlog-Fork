---
interface Tool {
  id: number;
  name: string;
  description?: string;
  url?: string;
  icon?: string;
  category?: string;
  status?: string;
}

interface Props {
  tools?: Tool[];
}

let { tools = [] } = Astro.props;
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const category = Astro.url.searchParams.get('category');
const status = Astro.url.searchParams.get('status');
const pageSize = 10;
const skip = (page - 1) * pageSize;
let hasNextPage = false;

// Fetch if not provided via props
if (tools.length === 0) {
  try {
    const fetchLimit = pageSize + 1;
    const params = new URLSearchParams();
    params.append('skip', skip.toString());
    params.append('limit', fetchLimit.toString());
    if (category && category !== 'all') params.append('category', category);
    if (status && status !== 'all') params.append('status', status);

    const apiBase = import.meta.env.SSR ? 'http://127.0.0.1:8000' : '';
    const response = await fetch(`${apiBase}/api/admin/tools?${params.toString()}`);
    if (response.ok) {
      const data = await response.json();
      const mappedTools = data.map((item: any) => ({
        id: item.id,
        name: item.name,
        description: item.description,
        url: item.url,
        icon: item.icon,
        category: item.category,
        status: item.status || 'published'
      }));

      if (mappedTools.length > pageSize) {
        hasNextPage = true;
        tools = mappedTools.slice(0, pageSize);
      } else {
        hasNextPage = false;
        tools = mappedTools;
      }
    }
  } catch (e) {
    console.error("Failed to fetch tools from API", e);
  }
} else {
  hasNextPage = tools.length === pageSize;
}

const getPageUrl = (p: number) => {
  const params = new URLSearchParams(Astro.url.searchParams);
  params.set('page', p.toString());
  return `?${params.toString()}`;
};
---

<div class="tool-list-card">
    <div class="card-header">
        <span>Tool List</span>
        <span class="count" id="tool-count">{tools.length} tools</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-icon">Icon</th>
                    <th class="col-name">Name</th>
                    <th class="col-desc">Description</th>
                    <th class="col-url">URL</th>
                    <th class="col-category">Category</th>
                    <th class="col-status">Status</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="tool-table-body">
                {tools.length > 0 ? (
                    tools.map((tool) => (
                        <tr>
                            <td>
                                {tool.icon ? (
                                    tool.icon.startsWith('<svg') ? <Fragment set:html={tool.icon} /> : <img src={tool.icon} alt="icon" class="tool-icon"/>
                                ) : (
                                    <div class="no-icon"></div>
                                )}
                            </td>
                            <td>
                                <span class="name-text">{tool.name}</span>
                            </td>
                            <td>
                                <div class="truncate" title={tool.description}>{tool.description || '-'}</div>
                            </td>
                            <td>
                                {tool.url ? <a href={tool.url} target="_blank" class="url-link"><i class="fas fa-external-link-alt"></i></a> : '-'}
                            </td>
                            <td>
                                <span class="category-badge">{tool.category || 'Uncategorized'}</span>
                            </td>
                            <td>
                                <span class={`status-badge ${tool.status}`}>{tool.status}</span>
                            </td>
                            <td>
                                <button class="btn-icon edit" title="Edit" data-id={tool.id}><i class="fas fa-edit"></i></button>
                                <button class="btn-icon delete" title="Delete" data-id={tool.id}><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    ))
                ) : (
                    <tr><td colspan="7" class="loading-text">No tools found</td></tr>
                )}
            </tbody>
        </table>
    </div>

    <div class="pagination-container">
      <div class="pagination-controls">
        <a href={page > 1 ? getPageUrl(page - 1) : '#'} class={`page-btn ${page <= 1 ? 'disabled' : ''}`} aria-label="Previous Page">
          &lt;
        </a>
        
        <div class="page-info">
          Page <input type="number" id="page-input" class="page-input" min="1" value={page} />
        </div>

        <a href={hasNextPage ? getPageUrl(page + 1) : '#'} class={`page-btn ${!hasNextPage ? 'disabled' : ''}`} aria-label="Next Page">
          &gt;
        </a>
      </div>
    </div>
</div>

<script define:vars={{ initialTools: tools }}>
  window.initialTools = initialTools;
</script>

<script>
  interface Tool {
    id: number;
    name: string;
    description?: string;
    url?: string;
    icon?: string;
    category?: string;
    status?: string;
  }

  declare global {
    interface Window {
      initialTools: Tool[];
    }
  }

  let currentTools: Tool[] = window.initialTools || [];
  const pageInput = document.getElementById('page-input') as HTMLInputElement;
  const tbody = document.getElementById('tool-table-body');
  const countSpan = document.getElementById('tool-count');
  const paginationBar = document.querySelector('.pagination-container');
  
  function updatePage(page: number) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', page.toString());
    window.history.pushState({}, '', url.toString());
    fetchAndRenderTools();
  }

  if (pageInput) {
    pageInput.addEventListener('change', () => {
      let page = parseInt(pageInput.value);
      if (isNaN(page) || page < 1) page = 1;
      updatePage(page);
    });

    pageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        let page = parseInt(pageInput.value);
        if (isNaN(page) || page < 1) page = 1;
        updatePage(page);
      }
    });
  }

  window.addEventListener('tool-filter-change', () => {
    fetchAndRenderTools();
  });

  window.addEventListener('popstate', () => {
    fetchAndRenderTools();
  });

  // Initial attach
  attachEventListeners();

  async function fetchAndRenderTools() {
    if (!tbody) return;
    
    tbody.style.opacity = '0.5';

    const urlParams = new URLSearchParams(window.location.search);
    const page = parseInt(urlParams.get('page') || '1');
    const pageSize = 10;
    const skip = (page - 1) * pageSize;
    
    const fetchLimit = pageSize + 1;
    const apiParams = new URLSearchParams();
    apiParams.append('skip', skip.toString());
    apiParams.append('limit', fetchLimit.toString());
    
    const category = urlParams.get('category');
    if (category && category !== 'all') apiParams.append('category', category);
    
    const status = urlParams.get('status');
    if (status && status !== 'all') apiParams.append('status', status);

    try {
      const response = await fetch(`/api/admin/tools?${apiParams.toString()}`);
      if (response.ok) {
        const data = await response.json();
        const mappedTools = data.map((item: any) => ({
          id: item.id,
          name: item.name,
          description: item.description,
          url: item.url,
          icon: item.icon,
          category: item.category,
          status: item.status || 'published'
        }));

        let tools = [];
        let hasNextPage = false;

        if (mappedTools.length > pageSize) {
          hasNextPage = true;
          tools = mappedTools.slice(0, pageSize);
        } else {
          hasNextPage = false;
          tools = mappedTools;
        }

        currentTools = tools; // Update global

        if (countSpan) countSpan.textContent = `${tools.length} tools`;

        renderTable(tools);
        renderPagination(page, hasNextPage);
        attachEventListeners();
      }
    } catch (e) {
      console.error("Failed to fetch tools", e);
      if(tbody) tbody.innerHTML = '<tr><td colspan="7" class="error-text">Failed to load tools.</td></tr>';
    } finally {
      if(tbody) tbody.style.opacity = '1';
    }
  }

  function renderTable(tools: any[]) {
    if (!tbody) return;
    
    if (tools.length === 0) {
      tbody.innerHTML = `<tr><td colspan="7" class="loading-text">No tools found</td></tr>`;
      return;
    }

    tbody.innerHTML = tools.map(tool => `
      <tr>
        <td>
            ${tool.icon ? (tool.icon.startsWith('<svg') ? tool.icon : `<img src="${tool.icon}" alt="icon" class="tool-icon"/>`) : '<div class="no-icon"></div>'}
        </td>
        <td>
            <span class="name-text">${tool.name}</span>
        </td>
        <td>
            <div class="truncate" title="${tool.description || ''}">${tool.description || '-'}</div>
        </td>
        <td>
            ${tool.url ? `<a href="${tool.url}" target="_blank" class="url-link"><i class="fas fa-external-link-alt"></i></a>` : '-'}
        </td>
        <td>
            <span class="category-badge">${tool.category || 'Uncategorized'}</span>
        </td>
        <td>
            <span class="status-badge ${tool.status}">${tool.status}</span>
        </td>
        <td>
            <button class="btn-icon edit" title="Edit" data-id="${tool.id}"><i class="fas fa-edit"></i></button>
            <button class="btn-icon delete" title="Delete" data-id="${tool.id}"><i class="fas fa-trash"></i></button>
        </td>
      </tr>
    `).join('');
  }

  function attachEventListeners() {
    document.querySelectorAll('.btn-icon.delete').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = (e.currentTarget as HTMLElement).getAttribute('data-id');
        if (!id) return;
        
        if (confirm('Are you sure you want to delete this tool?')) {
            try {
                const res = await fetch(`/api/admin/tools/${id}`, { method: 'DELETE' });
                if (res.ok) {
                    window.showAdminAlert('Tool deleted successfully', 'success');
                    fetchAndRenderTools();
                } else {
                    window.showAdminAlert('Failed to delete tool', 'error');
                }
            } catch (err) {
                console.error(err);
                window.showAdminAlert('Error deleting tool', 'error');
            }
        }
      });
    });

    document.querySelectorAll('.btn-icon.edit').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.currentTarget as HTMLElement).getAttribute('data-id');
        const tool = currentTools.find((t: Tool) => t.id === Number(id));
        if (tool) {
            window.dispatchEvent(new CustomEvent('edit-tool', { detail: tool }));
        }
      });
    });
  }

  function renderPagination(page: number, hasNextPage: boolean) {
    if (!paginationBar) return;
    
    if (pageInput) pageInput.value = page.toString();

    const prevBtn = paginationBar.querySelector('a[aria-label="Previous Page"]') as HTMLAnchorElement | null;
    const nextBtn = paginationBar.querySelector('a[aria-label="Next Page"]') as HTMLAnchorElement | null;

    if (prevBtn) {
      if (page > 1) {
        prevBtn.classList.remove('disabled');
        prevBtn.setAttribute('href', '#');
        prevBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page - 1); };
      } else {
        prevBtn.classList.add('disabled');
        prevBtn.onclick = null;
      }
    }

    if (nextBtn) {
      if (hasNextPage) {
        nextBtn.classList.remove('disabled');
        nextBtn.setAttribute('href', '#');
        nextBtn.onclick = (e: MouseEvent) => { e.preventDefault(); updatePage(page + 1); };
      } else {
        nextBtn.classList.add('disabled');
        nextBtn.onclick = null;
      }
    }
  }
</script>

<style>
