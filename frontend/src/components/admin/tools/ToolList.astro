---
interface Tool {
  id: number;
  name: string;
  description?: string;
  url?: string;
  icon?: string;
  category?: string;
  status?: string;
}

interface Props {
  tools?: Tool[];
}

let { tools = [] } = Astro.props;
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const category = Astro.url.searchParams.get('category');
const status = Astro.url.searchParams.get('status');
const pageSize = 10;
const skip = (page - 1) * pageSize;
let hasNextPage = false;

// Fetch if not provided via props
if (tools.length === 0) {
  try {
    const fetchLimit = pageSize + 1;
    const params = new URLSearchParams();
    params.append('skip', skip.toString());
    params.append('limit', fetchLimit.toString());
    if (category && category !== 'all') params.append('category', category);
    if (status && status !== 'all') params.append('status', status);

    const response = await fetch(`http://127.0.0.1:8000/api/admin/tools?${params.toString()}`);
    if (response.ok) {
      const data = await response.json();
      const mappedTools = data.map((item: any) => ({
        id: item.id,
        name: item.name,
        description: item.description,
        url: item.url,
        icon: item.icon,
        category: item.category,
        status: item.status || 'published'
      }));

      if (mappedTools.length > pageSize) {
        hasNextPage = true;
        tools = mappedTools.slice(0, pageSize);
      } else {
        hasNextPage = false;
        tools = mappedTools;
      }
    }
  } catch (e) {
    console.error("Failed to fetch tools from API", e);
  }
} else {
  hasNextPage = tools.length === pageSize;
}

const getPageUrl = (p: number) => {
  const params = new URLSearchParams(Astro.url.searchParams);
  params.set('page', p.toString());
  return `?${params.toString()}`;
};
---

<div class="page-wrapper">
  <h2 class="section-title">工具列表</h2>
  
  <div class="tool-list-card">
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-icon">Icon</th>
                    <th class="col-name">Name</th>
                    <th class="col-desc">Description</th>
                    <th class="col-url">URL</th>
                    <th class="col-category">Category</th>
                    <th class="col-status">Status</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="tool-table-body">
                {tools.length > 0 ? (
                    tools.map((tool) => (
                        <tr>
                            <td class="col-icon">
                                {tool.icon ? (
                                    tool.icon.startsWith('<svg') ? <Fragment set:html={tool.icon} /> : <img src={tool.icon} alt="icon" class="tool-icon"/>
                                ) : (
                                    <div class="no-icon"></div>
                                )}
                            </td>
                            <td class="col-name">
                                <span class="name-text">{tool.name}</span>
                            </td>
                            <td class="col-desc">
                                <span class="desc-text" title={tool.description}>{tool.description || '-'}</span>
                            </td>
                            <td class="col-url">
                                {tool.url ? <a href={tool.url} target="_blank" class="url-link"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg></a> : '-'}
                            </td>
                            <td class="col-category">
                                <span class="category-badge">{tool.category || 'Uncategorized'}</span>
                            </td>
                            <td class="col-status">
                                <span class={`status-badge ${tool.status}`}>{tool.status}</span>
                            </td>
                            <td class="col-actions">
                                <button class="btn-icon edit" title="Edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                </button>
                                <button class="btn-icon delete" title="Delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                </button>
                            </td>
                        </tr>
                    ))
                ) : (
                    <tr><td colspan="7" class="no-data">No tools found</td></tr>
                )}
            </tbody>
        </table>
    </div>

    <div class="pagination-bar">
      <div class="pagination-controls">
        <a href={page > 1 ? getPageUrl(page - 1) : '#'} class={`btn-page ${page <= 1 ? 'disabled' : ''}`} aria-label="Previous Page">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
        </a>
        
        <div class="page-input-container">
          <input type="number" id="page-input" class="page-input" min="1" value={page} />
        </div>

        <a href={hasNextPage ? getPageUrl(page + 1) : '#'} class={`btn-page ${!hasNextPage ? 'disabled' : ''}`} aria-label="Next Page">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  const pageInput = document.getElementById('page-input') as HTMLInputElement;
  const tbody = document.getElementById('tool-table-body');
  const paginationBar = document.querySelector('.pagination-bar');
  
  function updatePage(page: number) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', page.toString());
    window.history.pushState({}, '', url.toString());
    fetchAndRenderTools();
  }

  if (pageInput) {
    pageInput.addEventListener('change', () => {
      let page = parseInt(pageInput.value);
      if (isNaN(page) || page < 1) page = 1;
      updatePage(page);
    });

    pageInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        let page = parseInt(pageInput.value);
        if (isNaN(page) || page < 1) page = 1;
        updatePage(page);
      }
    });
  }

  window.addEventListener('tool-filter-change', () => {
    fetchAndRenderTools();
  });

  window.addEventListener('popstate', () => {
    fetchAndRenderTools();
  });

  async function fetchAndRenderTools() {
    if (!tbody) return;
    
    tbody.style.opacity = '0.5';

    const urlParams = new URLSearchParams(window.location.search);
    const page = parseInt(urlParams.get('page') || '1');
    const pageSize = 10;
    const skip = (page - 1) * pageSize;
    
    const fetchLimit = pageSize + 1;
    const apiParams = new URLSearchParams();
    apiParams.append('skip', skip.toString());
    apiParams.append('limit', fetchLimit.toString());
    
    const category = urlParams.get('category');
    if (category && category !== 'all') apiParams.append('category', category);
    
    const status = urlParams.get('status');
    if (status && status !== 'all') apiParams.append('status', status);

    try {
      const response = await fetch(`http://127.0.0.1:8000/api/admin/tools?${apiParams.toString()}`);
      if (response.ok) {
        const data = await response.json();
        const mappedTools = data.map((item: any) => ({
          id: item.id,
          name: item.name,
          description: item.description,
          url: item.url,
          icon: item.icon,
          category: item.category,
          status: item.status || 'published'
        }));

        let tools = [];
        let hasNextPage = false;

        if (mappedTools.length > pageSize) {
          hasNextPage = true;
          tools = mappedTools.slice(0, pageSize);
        } else {
          hasNextPage = false;
          tools = mappedTools;
        }

        renderTable(tools);
        renderPagination(page, hasNextPage);
      }
    } catch (e) {
      console.error("Failed to fetch tools", e);
    } finally {
      tbody.style.opacity = '1';
    }
  }

  function renderTable(tools: any[]) {
    if (!tbody) return;
    
    if (tools.length === 0) {
      tbody.innerHTML = `<tr><td colspan="7" class="no-data">No tools found</td></tr>`;
      return;
    }

    tbody.innerHTML = tools.map(tool => `
      <tr>
        <td class="col-icon">
            ${tool.icon ? (tool.icon.startsWith('<svg') ? tool.icon : `<img src="${tool.icon}" alt="icon" class="tool-icon"/>`) : '<div class="no-icon"></div>'}
        </td>
        <td class="col-name">
            <span class="name-text">${tool.name}</span>
        </td>
        <td class="col-desc">
            <span class="desc-text" title="${tool.description || ''}">${tool.description || '-'}</span>
        </td>
        <td class="col-url">
            ${tool.url ? `<a href="${tool.url}" target="_blank" class="url-link"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg></a>` : '-'}
        </td>
        <td class="col-category">
            <span class="category-badge">${tool.category || 'Uncategorized'}</span>
        </td>
        <td class="col-status">
            <span class="status-badge ${tool.status}">${tool.status}</span>
        </td>
        <td class="col-actions">
            <button class="btn-icon edit" title="Edit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
            </button>
            <button class="btn-icon delete" title="Delete">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
            </button>
        </td>
      </tr>
    `).join('');
  }

  function renderPagination(page: number, hasNextPage: boolean) {
    if (!paginationBar) return;
    
    if (pageInput) pageInput.value = page.toString();

    const prevBtn = paginationBar.querySelector('a[aria-label="Previous Page"]') as HTMLAnchorElement | null;
    const nextBtn = paginationBar.querySelector('a[aria-label="Next Page"]') as HTMLAnchorElement | null;

    if (prevBtn) {
      prevBtn.href = page > 1 ? `?page=${page - 1}` : '#';
      if (page <= 1) prevBtn.classList.add('disabled');
      else prevBtn.classList.remove('disabled');
      
      prevBtn.onclick = (e) => {
        e.preventDefault();
        if (page > 1) updatePage(page - 1);
      };
    }

    if (nextBtn) {
      nextBtn.href = hasNextPage ? `?page=${page + 1}` : '#';
      if (!hasNextPage) nextBtn.classList.add('disabled');
      else nextBtn.classList.remove('disabled');
      
      nextBtn.onclick = (e) => {
        e.preventDefault();
        if (hasNextPage) updatePage(page + 1);
      };
    }
  }
</script>

<style>
  :root {
    --bg-surface: #ffffff;
    --bg-hover: #f9fafb;
    --border-color: #e5e7eb;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --primary-color: #4f46e5;
    --danger-color: #ef4444;
    
    --status-published-bg: #d1fae5;
    --status-published-text: #065f46;
    --status-draft-bg: #fef3c7;
    --status-draft-text: #92400e;
    --status-archived-bg: #f3f4f6;
    --status-archived-text: #374151;

    --font-main: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
  }

  .page-wrapper {
    width: 100%;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
    font-family: var(--font-main);
    letter-spacing: -0.025em;
  }

  .tool-list-card {
    background: var(--bg-surface);
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    overflow: hidden;
    border: 1px solid var(--border-color);
    width: 100%;
    font-family: var(--font-main);
    display: flex;
    flex-direction: column;
  }

  .admin-table {
    width: 100%;
    border-collapse: collapse;
    font-family: var(--font-main);
    font-size: 0.875rem;
    table-layout: fixed;
    flex: 1;
  }

  .admin-table :global(th) {
    background-color: var(--bg-hover);
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    padding: 1rem 1.5rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
    border-right: 1px solid var(--border-color);
  }
  
  .admin-table :global(th:last-child) {
    border-right: none;
  }

  .admin-table :global(td) {
    padding: 1rem 1.5rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border-color);
    vertical-align: middle;
    border-right: 1px solid var(--border-color);
  }

  .admin-table :global(td:last-child) {
    border-right: none;
  }

  .admin-table :global(tr:last-child td) {
    border-bottom: none;
  }

  .admin-table :global(tr:hover td) {
    background-color: var(--bg-hover);
  }

  /* Column Specifics */
  :global(.col-icon) { width: 60px; text-align: center; }
  :global(.col-name) { width: 15%; }
  :global(.col-desc) { width: 30%; }
  :global(.col-url) { width: 8%; text-align: center; }
  :global(.col-category) { width: 15%; }
  :global(.col-status) { width: 10%; }
  :global(.col-actions) { width: 10%; text-align: center; }

  :global(.tool-icon) {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }
  
  :global(.col-icon svg) {
    width: 24px;
    height: 24px;
    color: var(--text-secondary);
  }

  :global(.no-icon) {
    width: 24px;
    height: 24px;
    background: #f0f2f5;
    border-radius: 4px;
    margin: 0 auto;
  }

  :global(.name-text) {
    font-weight: 600;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }

  :global(.desc-text) {
    color: var(--text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    font-size: 0.8rem;
  }

  :global(.url-link) {
    color: var(--primary-color);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  :global(.url-link:hover) {
    color: #4338ca;
  }

  :global(.category-badge) {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #f3f4f6;
    color: #4b5563;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  :global(.status-badge) {
    display: inline-block;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: capitalize;
  }

  :global(.status-badge.published) {
    background-color: var(--status-published-bg);
    color: var(--status-published-text);
  }

  :global(.status-badge.draft) {
    background-color: var(--status-draft-bg);
    color: var(--status-draft-text);
  }
  
  :global(.status-badge.archived) {
    background-color: var(--status-archived-bg);
    color: var(--status-archived-text);
  }

  :global(.btn-icon) {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 6px;
    color: var(--text-secondary);
    transition: all 0.2s;
    margin-left: 0.25rem;
  }

  :global(.btn-icon:hover) {
    background-color: #e5e7eb;
  }

  :global(.btn-icon.edit:hover) {
    color: var(--primary-color);
    background-color: #e0e7ff;
  }

  :global(.btn-icon.delete:hover) {
    color: var(--danger-color);
    background-color: #fee2e2;
  }

  /* Pagination */
  :global(.pagination-bar) {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border-color);
    background-color: var(--bg-surface);
  }

  :global(.pagination-controls) {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  :global(.btn-page) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--bg-surface);
    color: #666;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.btn-page:hover:not(.disabled)) {
    background-color: #f5f5f5;
    color: #000;
    border-color: #ddd;
  }

  :global(.btn-page.disabled) {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
    background-color: var(--bg-surface);
  }

  :global(.page-input-container) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  :global(.page-input) {
    width: 40px;
    height: 32px;
    text-align: center;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    font-family: inherit;
    font-size: 0.9rem;
    color: var(--text-primary);
    outline: none;
    transition: border-color 0.2s;
    -moz-appearance: textfield;
  }
  :global(.page-input::-webkit-outer-spin-button),
  :global(.page-input::-webkit-inner-spin-button) {
    -webkit-appearance: none;
    margin: 0;
  }
  :global(.page-input:focus) {
    border-color: var(--text-primary);
  }

  :global(.no-data) {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }
</style>
