---
// DiaryList.astro
---

<div class="diary-list-card">
    <div class="card-header">
        <span>Diary List</span>
        <span class="count" id="diary-count">0 entries</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-date">Date</th>
                    <th class="col-content">Content</th>
                    <th class="col-mood">Mood</th>
                    <th class="col-weather">Weather</th>
                    <th class="col-images">Images</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="diary-table-body">
                <tr><td colspan="6" class="loading-text">Loading...</td></tr>
            </tbody>
        </table>
    </div>
    
    <div class="pagination-container" id="pagination-container" style="display: none;">
        <button class="page-btn" id="prev-page" disabled>&lt;</button>
        <span class="page-info">Page <span id="current-page">1</span> of <span id="total-pages">1</span></span>
        <button class="page-btn" id="next-page" disabled>&gt;</button>
    </div>
</div>

<script>
    interface Diary {
        id: number;
        date: string;
        content?: string;
        mood?: string;
        weather?: string;
        images?: string[] | string;
    }

    interface DiaryResponse {
        total: number;
        items: Diary[];
    }

    let currentPage = 1;
    const limit = 10;
    let totalPages = 1;

    async function fetchDiaries() {
        const tbody = document.getElementById('diary-table-body');
        const countSpan = document.getElementById('diary-count');
        const paginationContainer = document.getElementById('pagination-container');
        const prevBtn = document.getElementById('prev-page') as HTMLButtonElement;
        const nextBtn = document.getElementById('next-page') as HTMLButtonElement;
        const currentPageSpan = document.getElementById('current-page');
        const totalPagesSpan = document.getElementById('total-pages');
        
        if(tbody) tbody.innerHTML = '<tr><td colspan="6" class="loading-text">Loading...</td></tr>';

        // Get params from URL
        const urlParams = new URLSearchParams(window.location.search);
        const year = urlParams.get('year');
        const month = urlParams.get('month');
        
        const skip = (currentPage - 1) * limit;

        let url = `http://127.0.0.1:8000/api/admin/diaries?skip=${skip}&limit=${limit}`;
        if (year) url += `&year=${year}`;
        if (month) url += `&month=${month}`;

        try {
            const res = await fetch(url);
            if (!res.ok) throw new Error('Failed to fetch');
            const data: DiaryResponse = await res.json();
            const diaries = data.items;
            const total = data.total;

            totalPages = Math.ceil(total / limit);
            if (totalPages === 0) totalPages = 1;

            // Update Pagination UI
            if (currentPageSpan) currentPageSpan.textContent = currentPage.toString();
            if (totalPagesSpan) totalPagesSpan.textContent = totalPages.toString();
            if (prevBtn) prevBtn.disabled = currentPage <= 1;
            if (nextBtn) nextBtn.disabled = currentPage >= totalPages;
            if (paginationContainer) paginationContainer.style.display = total > 0 ? 'flex' : 'none';

            if (countSpan) countSpan.textContent = `${total} entries`;

            if (tbody) {
                if (diaries.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6" class="empty-text">No diaries found.</td></tr>';
                } else {
                    tbody.innerHTML = diaries.map(diary => {
                        // Parse images if string
                        let images = diary.images;
                        if (typeof images === 'string') {
                            try { images = JSON.parse(images); } catch { images = []; }
                        }
                        const imageCount = Array.isArray(images) ? images.length : 0;

                        const d = new Date(diary.date);
                        const dateStr = d.getFullYear() + '-' + 
                            String(d.getMonth() + 1).padStart(2, '0') + '-' + 
                            String(d.getDate()).padStart(2, '0') + ' ' + 
                            String(d.getHours()).padStart(2, '0') + ':' + 
                            String(d.getMinutes()).padStart(2, '0');

                        return `
                        <tr>
                            <td>${dateStr}</td>
                            <td><div class="truncate" title="${diary.content || ''}">${diary.content || '-'}</div></td>
                            <td>${diary.mood ? `<span class="mood-badge ${diary.mood}">${diary.mood}</span>` : '-'}</td>
                            <td>${diary.weather || '-'}</td>
                            <td>${imageCount > 0 ? `<span class="tag">${imageCount} images</span>` : '-'}</td>
                            <td>
                                <button class="btn-icon edit" title="Edit" data-diary='${JSON.stringify(diary).replace(/'/g, "&#39;")}'><i class="fas fa-edit"></i></button>
                                <button class="btn-icon delete" title="Delete" data-id="${diary.id}"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    `}).join('');
                }
            }
        } catch (error) {
            console.error(error);
            if(tbody) tbody.innerHTML = '<tr><td colspan="6" class="error-text">Failed to load diaries.</td></tr>';
        }
    }

    // Initial Fetch
    fetchDiaries();

    // Event Listeners
    const tbody = document.getElementById('diary-table-body');
    tbody?.addEventListener('click', async (e) => {
        const target = e.target as HTMLElement;
        const btn = target.closest('button');
        if (!btn) return;

        if (btn.classList.contains('delete')) {
            const id = btn.getAttribute('data-id');
            if (id && confirm('Are you sure you want to delete this diary entry?')) {
                try {
                    const res = await fetch(`http://127.0.0.1:8000/api/admin/diaries/${id}`, {
                        method: 'DELETE'
                    });
                    if (res.ok) {
                        fetchDiaries();
                        window.dispatchEvent(new CustomEvent('diary-updated'));
                    } else {
                        alert('Failed to delete diary');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Error deleting diary');
                }
            }
        } else if (btn.classList.contains('edit')) {
            const diaryData = btn.getAttribute('data-diary');
            if (diaryData) {
                const diary = JSON.parse(diaryData);
                // Parse images if string
                if (typeof diary.images === 'string') {
                    try { diary.images = JSON.parse(diary.images); } catch { diary.images = []; }
                }
                window.dispatchEvent(new CustomEvent('edit-diary', { detail: diary }));
            }
        }
    });

    // Pagination Listeners
    document.getElementById('prev-page')?.addEventListener('click', () => {
        if (currentPage > 1) {
            currentPage--;
            fetchDiaries();
        }
    });

    document.getElementById('next-page')?.addEventListener('click', () => {
        if (currentPage < totalPages) {
            currentPage++;
            fetchDiaries();
        }
    });

    // External Events
    window.addEventListener('diary-filter-change', () => {
        currentPage = 1;
        fetchDiaries();
    });

    window.addEventListener('diary-created', () => {
        fetchDiaries();
    });
</script>

<style>
    .diary-list-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 600;
        color: #303133;
    }

    .count {
        font-size: 14px;
        color: #909399;
        font-weight: normal;
    }

    .table-container {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        table-layout: fixed; /* Important for truncation */
    }

    .admin-table th {
        text-align: left;
        padding: 12px 16px;
        color: #909399;
        font-weight: 500;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
    }

    /* Column Widths */
    .col-date { width: 150px; }
    .col-content { width: auto; }
    .col-mood { width: 100px; }
    .col-weather { width: 100px; }
    .col-images { width: 100px; }
    .col-actions { width: 100px; }

    .admin-table th:last-child {
        border-right: none;
    }

    /* Dynamic TD styling */
    .admin-table :global(td) {
        padding: 12px 16px;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5;
        color: #606266;
        vertical-align: middle;
    }

    .admin-table :global(td:last-child) {
        border-right: none;
    }
    
    /* First column styling */
    .admin-table :global(td:first-child) {
        font-weight: 500;
        color: #303133;
    }

    :global(.truncate) {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        display: block;
    }

    :global(.tag) {
        display: inline-block;
        background: #f4f4f5;
        color: #606266;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 12px;
    }

    :global(.btn-icon) {
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px 8px;
        font-size: 14px;
        transition: color 0.3s;
        margin-right: 4px;
    }

    :global(.btn-icon.edit) { color: #409eff; }
    :global(.btn-icon.edit:hover) { color: #66b1ff; }
    :global(.btn-icon.delete) { color: #f56c6c; }
    :global(.btn-icon.delete:hover) { color: #f78989; }

    :global(.loading-text), :global(.error-text), :global(.empty-text) {
        text-align: center;
        padding: 20px;
        color: #909399;
    }

    :global(.error-text) {
        color: #f56c6c;
    }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        gap: 15px;
    }

    .page-btn {
        padding: 6px 12px;
        background: #f4f4f5;
        border: 1px solid #dcdfe6;
        border-radius: 4px;
        cursor: pointer;
        color: #606266;
        transition: all 0.2s;
    }

    .page-btn:hover:not(:disabled) {
        color: #409eff;
        border-color: #c6e2ff;
        background-color: #ecf5ff;
    }

    .page-btn:disabled {
        cursor: not-allowed;
        color: #c0c4cc;
        background-color: #f4f4f5;
    }

    .page-info {
        font-size: 14px;
        color: #606266;
    }
</style>
