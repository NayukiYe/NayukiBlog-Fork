---
interface Props {
  title: string;
  desc: string;
  url: string;
  tech?: string[];
}

const { title, desc, url, tech = [] } = Astro.props;
---

<div class="project-card">
  <div class="project-content">
    <h3 class="project-title">
      {title}
    </h3>
    <p class="project-desc">{desc}</p>
    
    <div class="project-footer">
      <!-- GitHub Icon -->
      <a href="" target="_blank" class="icon-link" aria-label="GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
      </a>
      <!-- Website/Globe Icon -->
      <a href="" target="_blank" class="icon-link" aria-label="Website">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
      </a>
      <!-- File/Docs Icon -->
      <a href="" target="_blank" class="icon-link" aria-label="Documentation">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
      </a>
    </div>
  </div>
</div>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    height: 100%;
    box-sizing: border-box;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
    border-color: transparent;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-title {
    margin: 0 0 0.8rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #111;
  }

  .project-desc {
    margin: 0 0 1.5rem 0;
    color: #666;
    font-size: 0.9rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .project-footer {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-top: auto;
  }

  .icon-link {
    color: #888;
    transition: color 0.2s, transform 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-link:hover {
    color: #111;
    transform: scale(1.1);
  }
</style>
