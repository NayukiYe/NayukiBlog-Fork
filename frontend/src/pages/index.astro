---
import PageLayout from '../layouts/PageLayout.astro';
import PostCard from '../components/PostCard.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Fetch posts from src/pages/posts/*.md
const allPosts = await Astro.glob('./posts/*.md');
const posts = allPosts
  .sort((a: any, b: any) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf())
  .map((post: any) => ({
    title: post.frontmatter.title,
    date: post.frontmatter.date,
    desc: post.frontmatter.desc,
    url: post.url || '#',
    tags: post.frontmatter.tags
  }));

const projects = [
  {
    title: "NyeWeb",
    desc: "个人作品集与知识管理系统，集成文章展示、项目管理等功能。采用前后端分离架构。",
    url: "https://nyeweb.fun",
    tech: ["Astro", "React", "FastAPI"]
  },
  {
    title: "Face Login System",
    desc: "基于PyQt5的人脸识别登录系统，整合MTCNN与FaceNet技术，支持活体验证。",
    url: "/projects/face-login",
    tech: ["Python", "PyQt5", "PyTorch"]
  }
];

const todos = [
  { text: "Refactor Blog Style", done: true },
  { text: "Add Dark Mode", done: false },
  { text: "Update Project List", done: false },
  { text: "Write New Article", done: false },
  { text: "Fix Mobile Layout", done: true },
  { text: "Learn Rust", done: false },
];

const tags = ["Python", "TypeScript", "Astro", "React", "Linux", "Machine Learning", "Data Analysis"];
---

<PageLayout title="Nayuki Blog">
  <div class="home-container">
    
    <!-- Profile Section (Top) -->
    <section class="profile-section">
      <div class="profile-wrapper">
        <div class="profile-content">
          <div class="avatar-container">
            <img src="/test.jpg" alt="Nayuki" class="avatar" onerror="this.src='https://ui-avatars.com/api/?name=Nayuki&background=0D8ABC&color=fff'"/>
          </div>
          <div class="profile-info">
            <h1 class="profile-name">卟瓿钚</h1>
            <p class="profile-bio">一名普通大学生</p>
            <div class="profile-links">
              <a href="https://github.com/NayeyYe" target="_blank" aria-label="GitHub">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
              </a>
              <a href="https://x.com/NayeyYeX" target="_blank" aria-label="Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
              </a>
              <a href="mailto:Nayey.Ye@outlook.com" aria-label="Email">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
              </a>
            </div>
          </div>
        </div>

        <div class="profile-divider"></div>

        <div class="github-activity-card">
          <img src="https://ghchart.rshah.org/FF69B4/NayukiChiba" alt="NayeyYe's Github Chart" loading="lazy" />
        </div>

        <div class="profile-divider"></div>

        <div class="todo-card">
          <div class="todo-header">
            <span class="todo-title">To-Do List</span>
          </div>
          <div class="todo-list">
            {todos.map(todo => (
              <div class="todo-item" data-state={todo.done ? "checked" : "unchecked"}>
                <div class="todo-checkbox">
                  <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" class="check-icon"><polyline points="20 6 9 17 4 12"></polyline></svg>
                </div>
                <span class="todo-text">{todo.text}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <div class="divider"></div>

    <!-- Latest Posts -->
    <section class="section-block">
      <div class="section-header">
        <h2 class="section-title">Latest Posts</h2>
        <a href="/posts" class="view-all">View all →</a>
      </div>
      <div class="post-list">
        {posts.map((post: any) => (
          <PostCard {...post} />
        ))}
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="section-block">
      <div class="section-header">
        <h2 class="section-title">Featured Projects</h2>
        <a href="/projects" class="view-all">View all →</a>
      </div>
      <div class="project-grid">
        {projects.map(project => (
          <ProjectCard {...project} />
        ))}
      </div>
    </section>

  </div>
</PageLayout>

<style>
  .home-container {
    max-width: 960px;
    margin: 0 auto;
  }

  /* Profile Section */
  .profile-section {
    margin-bottom: 2.5rem;
  }

  .profile-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .profile-divider {
    display: none;
    width: 1px;
    height: 60px;
    background: #eaeaea;
    margin: 0 1.5rem;
  }

  .profile-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .github-activity-card {
    display: flex;
    align-items: center;
    justify-content: flex-end; /* Align to right to show recent commits */
    overflow: hidden;
    height: 160px; /* Increased height for better visibility */
    flex: 1; /* Fill remaining space */
    opacity: 0.6; /* Make it subtle */
  }

  .github-activity-card img {
    height: 100%;
    width: 100%; /* Force fill width */
    object-fit: cover; /* Cover the area to avoid empty spaces */
    object-position: right; /* Focus on recent data */
  }

  /* Todo Card Styles */
  .todo-card {
    background: #fff;
    border: 1px solid #eaeaea;
    border-radius: 16px;
    padding: 1rem;
    height: 160px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
  }

  .todo-header {
    margin-bottom: 0.8rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .todo-title {
    font-size: 0.8rem;
    font-weight: 700;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .todo-list {
    overflow-y: auto;
    flex: 1;
    padding-right: 4px;
  }

  /* Custom Scrollbar for Todo List */
  .todo-list::-webkit-scrollbar {
    width: 4px;
  }
  .todo-list::-webkit-scrollbar-track {
    background: transparent;
  }
  .todo-list::-webkit-scrollbar-thumb {
    background: #f0f0f0;
    border-radius: 4px;
  }
  .todo-list::-webkit-scrollbar-thumb:hover {
    background: #e0e0e0;
  }

  .todo-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.35rem 0;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .todo-item:hover {
    opacity: 0.8;
  }

  .todo-checkbox {
    width: 16px;
    height: 16px;
    border: 2px solid #ddd;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .check-icon {
    opacity: 0;
    transform: scale(0.5);
    transition: all 0.2s ease;
    color: #fff;
  }

  .todo-text {
    font-size: 0.85rem;
    color: #444;
    transition: all 0.2s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Checked State */
  .todo-item[data-state="checked"] .todo-checkbox {
    background: #FF69B4;
    border-color: #FF69B4;
  }

  .todo-item[data-state="checked"] .check-icon {
    opacity: 1;
    transform: scale(1);
  }

  .todo-item[data-state="checked"] .todo-text {
    color: #aaa;
    text-decoration: line-through;
  }

  @media (min-width: 768px) {
    .profile-wrapper {
      flex-direction: row;
      align-items: center;
    }

    .profile-divider {
      display: block;
    }

    .profile-content {
      flex: 0 0 25%; /* Reduced width to give more space to github card */
      min-width: 260px; /* Prevent content from breaking on smaller tablets */
    }

    .github-activity-card {
      margin-left: 0;
    }

    .todo-card {
      width: 220px; /* Fixed width on desktop */
      flex-shrink: 0;
    }
  }

  .avatar-container {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    flex-shrink: 0;
  }

  .avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-info {
    flex: 1;
  }

  .profile-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.3rem 0;
    color: #111;
  }

  .profile-bio {
    font-size: 0.95rem;
    color: #666;
    margin: 0 0 0.8rem 0;
  }

  .profile-links {
    display: flex;
    gap: 0.8rem;
  }

  .profile-links a {
    color: #666;
    transition: color 0.2s;
  }

  .profile-links a:hover {
    color: #000;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .tag-link {
    font-size: 0.85rem;
    color: #555;
    background: #f5f5f5;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .tag-link:hover {
    background: #eee;
    color: #000;
  }

  .divider {
    height: 1px;
    background: #eaeaea;
    margin: 2rem 0 3rem 0;
  }

  /* Section Styles */
  .section-block {
    margin-bottom: 4rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0;
    color: #111;
  }

  .view-all {
    font-size: 0.9rem;
    color: #666;
    text-decoration: none;
    transition: color 0.2s;
  }

  .view-all:hover {
    color: #000;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .project-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .avatar-container {
      width: 100px;
      height: 100px;
    }
  }
</style>

<script>
  // Simple client-side logic for todo toggling
  const todoItems = document.querySelectorAll('.todo-item');
  todoItems.forEach(item => {
    item.addEventListener('click', () => {
      const currentState = item.getAttribute('data-state');
      const newState = currentState === 'checked' ? 'unchecked' : 'checked';
      item.setAttribute('data-state', newState);
    });
  });
</script>
