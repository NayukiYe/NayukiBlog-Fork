---
export const prerender = false;

import Header from '../../components/Header.astro';
import Sidebar from '../../components/admin/Sidebar.astro';
import GalleryList from '../../components/admin/gallery/GalleryList.astro';
import GalleryFilter from '../../components/admin/gallery/GalleryFilter.astro';
import GalleryCreate from '../../components/admin/gallery/GalleryCreate.astro';

// Auth check
const authCookie = Astro.cookies.get('auth_token');
if (!authCookie || authCookie.value !== 'authorized') {
  return Astro.redirect('/admin/login', 302);
}
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery Management - Nayuki Blog Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <Header />
    
    <main class="admin-container">
        <Sidebar />

        <div class="content-area">
            <div class="page-header">
                <h2>Gallery Management</h2>
            </div>

            <div class="gallery-layout">
                <div class="top-section">
                    <div class="filter-container">
                        <GalleryFilter />
                    </div>
                    <div class="editor-placeholder">
                        <GalleryCreate />
                    </div>
                </div>
                <div class="list-container">
                    <GalleryList />
                </div>
            </div>
        </div>
    </main>

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
        }

        .admin-container {
            display: flex;
            min-height: calc(100vh - 60px);
        }

        .content-area {
            flex-grow: 1;
            overflow-x: hidden;
            padding: 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .page-header h2 {
            margin: 0;
            color: #303133;
            font-size: 24px;
        }

        .btn-primary {
            background: #000000;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background 0.3s;
        }

        .btn-primary:hover {
            flex-direction: column;
            gap: 24px;
        }

        .top-section {
            display: flex;
            gap: 24px;
            width: 100%;
        }

        .filter-container {
            flex: 1;
            max-width: 50%;
        }

        .editor-placeholder {
            flex: 1;
        }

        .list-container {
            width: 100%;
        }

        @media (max-width: 768px) {
            .top-section {
                flex-direction: column;
            }
            
            .filter-container {
                max-width: 100%column-reverse;
            }
            
            .filter-container {
                width: 100%;
                position: static;
            }
        }
    </style>
</body>
</html>
