import PageLayout from '../../layouts/PageLayout.astro';
import BookCard from '../../components/User/BookCard.astro';
// import booksData from '../data/books.json';

interface Book {
  title: string;
  cover: string;
  url: string;
  status: string;
  rating: number;
  tags: string[];
}

let books: Book[] = [];
try {
  const response = await fetch('http://127.0.0.1:8000/api/user/books');
  if (response.ok) {
    books = await response.json() as Book[];
  } else {
    console.error(`Failed to fetch books: ${response.status} ${response.statusText}`);
  }
} catch (error) {
  console.error('Failed to fetch books:', error);
}
